<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Custom styles for new category functionality */
        #newCategoryGroup, #newUnitGroup, #newGstGroup {
            margin-top: 10px;
            padding: 15px;
            background: #f8f9fa;
            border: 2px dashed #007bff;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        #newCategoryGroup.show, #newUnitGroup.show, #newGstGroup.show {
            animation: slideDown 0.3s ease-out;
        }
        
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        #newCategoryName, #newUnitName, #newGstRate {
            background: white;
            border: 2px solid #007bff;
            border-radius: 6px;
            padding: 10px;
            font-weight: 500;
        }
        
        #newCategoryName:focus, #newUnitName:focus, #newGstRate:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
            outline: none;
        }
        
        .form-text {
            margin-top: 8px;
            color: #6c757d;
            font-size: 12px;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .form-text::before {
            content: "üí°";
            font-size: 14px;
        }
        
        /* Style for the "Add New Category" option */
        option[value="__new__"] {
            background: #e7f3ff;
            color: #0056b3;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="logo-section">
                <h1>üè¢ <%= companyName %></h1>
                <p><%= isEdit ? 'Edit Item' : 'Add New Item' %></p>
            </div>
            
            <div class="user-section">
                <div class="user-info">
                    <span class="user-name">Welcome, <%= user.name %></span>
                    <span class="user-role">(<%= user.role %>)</span>
                </div>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="breadcrumb">
        <div class="breadcrumb-content">
            <a href="/dashboard">üè† Dashboard</a>
            <span class="separator">></span>
            <a href="/items">üì¶ Items</a>
            <span class="separator">></span>
            <span class="current"><%= isEdit ? '‚úèÔ∏è Edit Item' : '‚ûï Add New Item' %></span>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="items-main">
        <div class="form-container">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h2><%= isEdit ? '‚úèÔ∏è Edit Item' : '‚ûï Add New Item' %></h2>
                    <p><%= isEdit ? 'Update item information and stock details' : 'Add a new item to your inventory' %></p>
                </div>
            </div>

            <!-- Alert Messages -->
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="alert alert-error">
                    <%= query.error %>
                </div>
            <% } %>

            <!-- Form -->
            <form action="<%= isEdit ? `/items/${item.id}` : '/items' %>" method="POST" class="item-form" id="itemForm">
                <div class="form-card">
                    <!-- Basic Information -->
                    <div class="form-section">
                        <h3>üìã Basic Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="name">Item Name *</label>
                                <input type="text" id="name" name="name" required 
                                       value="<%= item ? item.name : '' %>" 
                                       placeholder="e.g., Steel Rod 8mm">
                            </div>

                            <div class="form-group">
                                <label for="categoryId">Category *</label>
                                <select id="categoryId" name="categoryId" required onchange="toggleNewCategoryInput()">
                                    <option value="">Select Category</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>" 
                                                <% if (item && item.categoryId === category.id) { %>selected<% } %>>
                                            <%= category.name %>
                                        </option>
                                    <% }) %>
                                    <option value="__new__">‚ûï Add New Category</option>
                                </select>
                            </div>

                            <!-- New Category Input (Hidden by default) -->
                            <div class="form-group" id="newCategoryGroup" style="display: none;">
                                <label for="newCategoryName">New Category Name *</label>
                                <input type="text" id="newCategoryName" name="newCategoryName" 
                                       placeholder="e.g., Tiles, Pipes, etc." 
                                       onchange="updateCategoryValue()">
                                <small class="form-text text-muted">
                                    This category will be added to the system automatically
                                </small>
                            </div>

                            <div class="form-group">
                                <label for="brand">Brand</label>
                                <input type="text" id="brand" name="brand" 
                                       value="<%= item ? item.brand : '' %>" 
                                       placeholder="e.g., TATA Steel, UltraTech">
                            </div>

                            <div class="form-group">
                                <label for="unit">Unit of Measure *</label>
                                <select id="unit" name="unit" required onchange="toggleNewUnitInput()">
                                    <option value="">Select Unit</option>
                                    <option value="kg" <% if (item && item.unit === 'kg') { %>selected<% } %>>Kilogram (kg)</option>
                                    <option value="pcs" <% if (item && item.unit === 'pcs') { %>selected<% } %>>Pieces (pcs)</option>
                                    <option value="bag" <% if (item && item.unit === 'bag') { %>selected<% } %>>Bag</option>
                                    <option value="bundle" <% if (item && item.unit === 'bundle') { %>selected<% } %>>Bundle</option>
                                    <option value="sqft" <% if (item && item.unit === 'sqft') { %>selected<% } %>>Square Feet (sqft)</option>
                                    <option value="L" <% if (item && item.unit === 'L') { %>selected<% } %>>Liter (L)</option>
                                    <option value="service" <% if (item && item.unit === 'service') { %>selected<% } %>>Service</option>
                                    <option value="ton" <% if (item && item.unit === 'ton') { %>selected<% } %>>Ton</option>
                                    <option value="meter" <% if (item && item.unit === 'meter') { %>selected<% } %>>Meter</option>
                                    <option value="feet" <% if (item && item.unit === 'feet') { %>selected<% } %>>Feet</option>
                                    <% 
                                    // Check if item has a custom unit (not in predefined list)
                                    const predefinedUnits = ['kg', 'pcs', 'bag', 'bundle', 'sqft', 'L', 'service', 'ton', 'meter', 'feet'];
                                    const hasCustomUnit = item && item.unit && !predefinedUnits.includes(item.unit) && item.unit !== '__new__';
                                    %>
                                    <% if (hasCustomUnit) { %>
                                        <option value="<%= item.unit %>" selected><%= item.unit %></option>
                                    <% } %>
                                    <option value="__new__">‚ûï Add New Unit</option>
                                </select>
                            </div>

                            <!-- New Unit Input (Hidden by default) -->
                            <div class="form-group" id="newUnitGroup" style="display: none;">
                                <label for="newUnitName">New Unit Name *</label>
                                <input type="text" id="newUnitName" name="newUnitName" 
                                       placeholder="e.g., box, roll, sheet, etc." 
                                       onchange="updateUnitValue()">
                                <small class="form-text text-muted">
                                    Enter a custom unit of measure
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing & Tax Information -->
                    <div class="form-section">
                        <h3>üí∞ Pricing & Tax Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="price">Price (‚Çπ) *</label>
                                <input type="number" id="price" name="price" step="0.01" min="0" required 
                                       value="<%= item ? item.price : '' %>" 
                                       placeholder="0.00">
                            </div>

                            <div class="form-group">
                                <label for="hsnCode">HSN Code</label>
                                <input type="text" id="hsnCode" name="hsnCode" 
                                       value="<%= item ? item.hsnCode : '' %>" 
                                       placeholder="e.g., 7213, 2523">
                            </div>

                            <div class="form-group">
                                <label>
                                    <input type="checkbox" id="isTaxable" name="isTaxable" value="true" 
                                           <% if (item && item.isTaxable) { %>checked<% } %>>
                                    Taxable Item
                                </label>
                            </div>

                            <div class="form-group" id="gstGroup" <% if (!item || !item.isTaxable) { %>style="display: none;"<% } %>>
                                <label for="gstRate">GST Rate (%) *</label>
                                <select id="gstRate" name="gstRate" onchange="toggleNewGstInput()">
                                    <option value="0" <% if (item && item.gstRate === 0) { %>selected<% } %>>0%</option>
                                    <option value="5" <% if (item && item.gstRate === 5) { %>selected<% } %>>5%</option>
                                    <option value="12" <% if (item && item.gstRate === 12) { %>selected<% } %>>12%</option>
                                    <option value="18" <% if (item && item.gstRate === 18) { %>selected<% } %>>18%</option>
                                    <option value="28" <% if (item && item.gstRate === 28) { %>selected<% } %>>28%</option>
                                    <% 
                                    // Check if item has a custom GST rate (not in predefined list)
                                    const predefinedRates = [0, 5, 12, 18, 28];
                                    const hasCustomGst = item && item.gstRate != null && !predefinedRates.includes(item.gstRate);
                                    %>
                                    <% if (hasCustomGst) { %>
                                        <option value="<%= item.gstRate %>" selected><%= item.gstRate %>%</option>
                                    <% } %>
                                    <option value="__new__">‚ûï Add Custom Rate</option>
                                </select>
                            </div>

                            <!-- New GST Rate Input (Hidden by default) -->
                            <div class="form-group" id="newGstGroup" style="display: none;">
                                <label for="newGstRate">Custom GST Rate (%) *</label>
                                <input type="number" id="newGstRate" name="newGstRate" 
                                       min="0" max="100" step="0.01"
                                       placeholder="e.g., 6, 14.5, 22, etc." 
                                       onchange="updateGstValue()">
                                <small class="form-text text-muted">
                                    Enter GST percentage (0-100%, decimals allowed)
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Item Properties -->
                    <div class="form-section">
                        <h3>‚öôÔ∏è Item Properties</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" id="isServiceItem" name="isServiceItem" value="true" 
                                           <% if (item && item.isServiceItem) { %>checked<% } %>>
                                    Service Item (No Stock Tracking)
                                </label>
                                <small class="form-help">Check for items like Loading, Transport charges</small>
                            </div>

                            <div class="form-group">
                                <label>
                                    <input type="checkbox" id="priceEditableAtBilling" name="priceEditableAtBilling" value="true" 
                                           <% if (item && item.priceEditableAtBilling) { %>checked<% } %>>
                                    Price Editable at Billing
                                </label>
                                <small class="form-help">Allow price changes during billing</small>
                            </div>

                            <div class="form-group">
                                <label for="barcode">Barcode (Optional)</label>
                                <input type="text" id="barcode" name="barcode" 
                                       value="<%= item ? item.barcode : '' %>" 
                                       placeholder="Barcode for future use">
                            </div>
                        </div>
                    </div>

                    <!-- Stock Information -->
                    <div class="form-section" id="stockSection" <% if (item && item.isServiceItem) { %>style="display: none;"<% } %>>
                        <h3>üì¶ Stock Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="stockQuantity">Initial Stock Quantity</label>
                                <input type="number" id="stockQuantity" name="stockQuantity" min="0" 
                                       value="<%= item && item.stock ? item.stock.quantity : '' %>" 
                                       placeholder="0">
                            </div>

                            <div class="form-group">
                                <label for="minLevel">Minimum Stock Level</label>
                                <input type="number" id="minLevel" name="minLevel" min="0" 
                                       value="<%= item && item.stock ? item.stock.minLevel : '' %>" 
                                       placeholder="0">
                                <small class="form-help">Alert when stock falls below this level</small>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="form-section">
                        <h3>üìù Additional Information</h3>
                        <div class="form-group">
                            <label for="bundleInfo">Bundle/Weight Information</label>
                            <textarea id="bundleInfo" name="bundleInfo" rows="3" 
                                      placeholder="e.g., Each bundle = 533 kg, Standard size: 6ft x 4ft"><%= item ? item.bundleInfo : '' %></textarea>
                            <small class="form-help">Useful for steel bundles, cement bags, etc.</small>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <a href="/items" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <%= isEdit ? 'üíæ Update Item' : '‚ûï Add Item' %>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <!-- JavaScript -->
    <script>
        // Handle GST rate visibility
        document.getElementById('isTaxable').addEventListener('change', function() {
            const gstGroup = document.getElementById('gstGroup');
            const gstRate = document.getElementById('gstRate');
            
            if (this.checked) {
                gstGroup.style.display = 'block';
                gstRate.required = true;
                if (!gstRate.value) {
                    gstRate.value = '18'; // Default to 18%
                }
            } else {
                gstGroup.style.display = 'none';
                gstRate.required = false;
                gstRate.value = '0';
            }
        });

        // Handle service item checkbox
        document.getElementById('isServiceItem').addEventListener('change', function() {
            const stockSection = document.getElementById('stockSection');
            const stockQuantity = document.getElementById('stockQuantity');
            const minLevel = document.getElementById('minLevel');
            
            if (this.checked) {
                stockSection.style.display = 'none';
                stockQuantity.value = '0';
                minLevel.value = '0';
                
                // Automatically set unit to service if not already set
                const unitSelect = document.getElementById('unit');
                if (!unitSelect.value) {
                    unitSelect.value = 'service';
                }
            } else {
                stockSection.style.display = 'block';
            }
        });

        // Form validation
        document.getElementById('itemForm').addEventListener('submit', function(e) {
            const name = document.getElementById('name').value.trim();
            const categoryId = document.getElementById('categoryId').value;
            const price = document.getElementById('price').value;
            const unit = document.getElementById('unit').value;
            const isTaxable = document.getElementById('isTaxable').checked;
            const gstRate = document.getElementById('gstRate').value;

            // Basic validation
            if (!name) {
                alert('Please enter item name');
                e.preventDefault();
                return;
            }

            if (!categoryId) {
                alert('Please select a category');
                e.preventDefault();
                return;
            }

            // Special validation for new category
            if (categoryId === '__new__') {
                const newCategoryName = document.getElementById('newCategoryName').value.trim();
                if (!newCategoryName) {
                    alert('Please enter a name for the new category');
                    e.preventDefault();
                    return;
                }
            }

            // Special validation for new unit
            if (unit === '__new__') {
                const newUnitName = document.getElementById('newUnitName').value.trim();
                if (!newUnitName) {
                    alert('Please enter a name for the new unit');
                    e.preventDefault();
                    return;
                }
            }

            if (!price || parseFloat(price) < 0) {
                alert('Please enter a valid price');
                e.preventDefault();
                return;
            }

            if (!unit) {
                alert('Please select unit of measure');
                e.preventDefault();
                return;
            }

            if (isTaxable && !gstRate) {
                alert('Please select GST rate for taxable items');
                e.preventDefault();
                return;
            }

            // Special validation for custom GST rate
            if (isTaxable && gstRate === '__new__') {
                const newGstRate = document.getElementById('newGstRate').value;
                if (!newGstRate || parseFloat(newGstRate) < 0 || parseFloat(newGstRate) > 100) {
                    alert('Please enter a valid GST rate between 0 and 100');
                    e.preventDefault();
                    return;
                }
            }
        });

        // Category management functions
        function toggleNewCategoryInput() {
            const categorySelect = document.getElementById('categoryId');
            const newCategoryGroup = document.getElementById('newCategoryGroup');
            const newCategoryName = document.getElementById('newCategoryName');
            
            if (categorySelect.value === '__new__') {
                newCategoryGroup.style.display = 'block';
                newCategoryName.required = true;
                newCategoryName.focus();
            } else {
                newCategoryGroup.style.display = 'none';
                newCategoryName.required = false;
                newCategoryName.value = '';
            }
        }
        
        function updateCategoryValue() {
            const categorySelect = document.getElementById('categoryId');
            const newCategoryName = document.getElementById('newCategoryName');
            
            if (categorySelect.value === '__new__' && newCategoryName.value.trim()) {
                // Update the select option with the new category name for validation
                const newOption = categorySelect.querySelector('option[value="__new__"]');
                newOption.textContent = `‚ûï ${newCategoryName.value.trim()}`;
            }
        }

        // Unit management functions
        function toggleNewUnitInput() {
            const unitSelect = document.getElementById('unit');
            const newUnitGroup = document.getElementById('newUnitGroup');
            const newUnitName = document.getElementById('newUnitName');
            
            if (unitSelect.value === '__new__') {
                newUnitGroup.style.display = 'block';
                newUnitName.required = true;
                newUnitName.focus();
            } else {
                newUnitGroup.style.display = 'none';
                newUnitName.required = false;
                newUnitName.value = '';
            }
        }
        
        function updateUnitValue() {
            const unitSelect = document.getElementById('unit');
            const newUnitName = document.getElementById('newUnitName');
            
            if (unitSelect.value === '__new__' && newUnitName.value.trim()) {
                // Update the select option with the new unit name for validation
                const newOption = unitSelect.querySelector('option[value="__new__"]');
                newOption.textContent = `‚ûï ${newUnitName.value.trim()}`;
            }
        }

        // GST Rate management functions
        function toggleNewGstInput() {
            const gstSelect = document.getElementById('gstRate');
            const newGstGroup = document.getElementById('newGstGroup');
            const newGstRate = document.getElementById('newGstRate');
            
            if (gstSelect.value === '__new__') {
                newGstGroup.style.display = 'block';
                newGstRate.required = true;
                newGstRate.focus();
            } else {
                newGstGroup.style.display = 'none';
                newGstRate.required = false;
                newGstRate.value = '';
            }
        }
        
        function updateGstValue() {
            const gstSelect = document.getElementById('gstRate');
            const newGstRate = document.getElementById('newGstRate');
            
            if (gstSelect.value === '__new__' && newGstRate.value.trim()) {
                // Update the select option with the new GST rate for validation
                const newOption = gstSelect.querySelector('option[value="__new__"]');
                newOption.textContent = `‚ûï ${newGstRate.value.trim()}%`;
            }
        }

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Auto-focus on item name
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('name').focus();
        });
    </script>
</body>
</html>
