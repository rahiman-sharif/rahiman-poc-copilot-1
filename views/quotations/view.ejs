        <!-- Alert Messages -->
    <% if (typeof query !== 'undefined' && query.success) { %>
        <div class="alert alert-success" style="margin: 20px auto; max-width: 800px;">
            <%= query.success %>
        </div>
    <% } %>

    <!-- Quotation Container -->
    <div class="quotation-container">
        <!-- Quotation Header -->
        <div class="quotation-header">
            <div class="company-info">
                <div class="company-name"><%= company.name %></div>
                <div class="company-details">
                    <%= company.address.line1 %>, <%= company.address.line2 %><br>
                    <%= company.address.city %>, <%= company.address.state %> - <%= company.address.pincode %><br>
                    Cell: <%= company.contact.phone1 %>, <%= company.contact.phone2 %><br>
                    <% if (company.gst.gstin) { %>GSTIN: <%= company.gst.gstin %><% } %>
                </div>
            </div>
            
            <div class="quotation-title">
                <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst')) { %>
                    Tax Quotation
                <% } else { %>
                    Quotation
                <% } %>
            </div>
            
            <div class="bill-type-indicator">
                <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst')) { %>
                    <span class="bill-type-badge gst-badge">üè∑Ô∏è GST Quotation</span>
                <% } else { %>
                    <span class="bill-type-badge non-gst-badge">üìÑ Non-GST Quotation</span>
                <% } %>
            </div>
        </div>

        <!-- Quotation Info -->
        <div class="quotation-info">
            <div class="bill-to">
                <div class="section-title">Quote To:</div>
                <strong><%= quotation.customerInfo?.name || 'Unknown Customer' %></strong><br>
                Phone: <%= quotation.customerInfo?.phone || 'N/A' %><br>
                <% if (quotation.customerInfo?.gstin && quotation.customerInfo.gstin.trim() !== '') { %>
                    GSTIN: <%= quotation.customerInfo.gstin %>
                <% } else { %>
                    <em>Unregistered Customer</em>
                <% } %>
            </div>
            
            <div class="bill-details">
                <div class="section-title">Quotation Details:</div>
                <% 
                const currentDate = new Date();
                const quotationDate = new Date(quotation.quotationDate);
                const validityDate = new Date(quotationDate.getTime() + quotation.validityDays*24*60*60*1000);
                let status = 'Valid';
                if (quotation.status === 'converted') {
                    status = 'Converted';
                } else if (currentDate > validityDate) {
                    status = 'Expired';
                }
                %>
                <strong>Quote No:</strong> #<%= quotation.quotationNumber %><br>
                <strong>Date:</strong> <%= new Date(quotation.quotationDate).toLocaleDateString('en-IN') %><br>
                <strong>Valid Till:</strong> <%= validityDate.toLocaleDateString('en-IN') %><br>
                <strong>Status:</strong> 
                <span class="status-badge status-<%= status.toLowerCase() %>"><%= status.toUpperCase() %></span><br>
                <strong>Created By:</strong> <%= user.name %>
            </div>
        </div>

        <!-- Items Section -->
        <div class="items-section">
            <div class="items-header">
                <h3>Items</h3>
                <div class="items-count" style="background: linear-gradient(135deg, #8b5cf6, #a855f7); color: white; padding: 8px 16px; border-radius: 20px; font-weight: 600; font-size: 14px; box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);"><%= quotation.items.length %> item(s)</div>
            </div>
            
            <div class="items-table-wrapper">
                <table class="items-table">
                    <thead>
                        <tr>
                            <th style="width: 60px; text-align: center;">S.No</th>
                            <th style="width: auto; text-align: left; min-width: 200px;">Description</th>
                            <th style="width: 100px; text-align: center;">HSN</th>
                            <th style="width: 80px; text-align: center;">Qty</th>
                            <th style="width: 120px; text-align: right;">Rate</th>
                            <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst')) { %>
                            <th style="width: 120px; text-align: right;">Amount</th>
                            <th style="width: 80px; text-align: center;">GST</th>
                            <% } else { %>
                            <th style="width: 150px; text-align: right;">Amount</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% let itemCounter = 1; %>
                        <% quotation.items.forEach(item => { %>
                            <tr class="item-row">
                                <td class="text-center"><%= itemCounter %></td>
                                <td class="item-name">
                                    <%= item.itemName %>
                                    <% if (item.bundleInfo) { %>
                                        <br><small style="color: #6c757d; font-style: italic;"><%= item.bundleInfo %></small>
                                    <% } %>
                                </td>
                                <td class="text-center"><%= item.hsnCode || '-' %></td>
                                <td class="text-center"><%= item.quantity %></td>
                                <td class="text-right">‚Çπ<%= item.rate.toFixed(2) %></td>
                                <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst')) { %>
                                <td class="text-right amount-cell">‚Çπ<%= item.amount.toFixed(2) %></td>
                                <td class="text-center"><%= item.gstRate || 0 %>%</td>
                                <% } else { %>
                                <td class="text-right amount-cell">‚Çπ<%= item.amount.toFixed(2) %></td>
                                <% } %>
                            </tr>
                            <% itemCounter++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Services Section -->
        <% if (quotation.extraCharges && quotation.extraCharges.length > 0) { %>
        <div class="services-section">
            <div class="services-header">
                <h3>Additional Services</h3>
                <div class="services-count" style="background: linear-gradient(135deg, #10b981, #059669); color: white; padding: 8px 16px; border-radius: 20px; font-weight: 600; font-size: 14px; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);"><%= quotation.extraCharges.length %> service(s)</div>
            </div>
            
            <div class="services-table-wrapper">
                <table class="services-table">
                    <thead>
                        <tr>
                            <th style="width: 60px; text-align: center;">S.No</th>
                            <th style="width: auto; text-align: left; min-width: 250px;">Service Description</th>
                            <th style="width: 100px; text-align: center;">SAC Code</th>
                            <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst')) { %>
                            <th style="width: 120px; text-align: right;">Amount</th>
                            <th style="width: 100px; text-align: center;">GST Rate</th>
                            <% } else { %>
                            <th style="width: 150px; text-align: right;">Amount</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% let serviceCounter = 1; %>
                        <% quotation.extraCharges.forEach(charge => { %>
                            <tr class="service-row">
                                <td class="text-center"><%= serviceCounter %></td>
                                <td class="service-name"><%= charge.description || charge.name || 'Service Charge' %></td>
                                <td class="text-center">9967</td>
                                <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst')) { %>
                                <td class="text-right amount-cell">‚Çπ<%= parseFloat(charge.amount || 0).toFixed(2) %></td>
                                <td class="text-center"><%= charge.gstRate || 0 %>%</td>
                                <% } else { %>
                                <td class="text-right amount-cell">‚Çπ<%= parseFloat(charge.amount || 0).toFixed(2) %></td>
                                <% } %>
                            </tr>
                            <% serviceCounter++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>

        <!-- Totals Section -->
        <div class="totals-section">
            <div class="totals-wrapper">
                <!-- Quote Information Card -->
                <div class="payment-card">
                    <div class="card-header">
                        üíú Quote Information
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Quote Status:</span>
                        <span class="row-value">
                            <span class="status-badge status-<%= status.toLowerCase() %>"><%= status.toUpperCase() %></span>
                        </span>
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Quote Date:</span>
                        <span class="row-value"><%= new Date(quotation.quotationDate).toLocaleDateString('en-IN') %></span>
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Valid Until:</span>
                        <span class="row-value"><%= validityDate.toLocaleDateString('en-IN') %></span>
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Validity:</span>
                        <span class="row-value"><%= quotation.validityDays %> days</span>
                    </div>
                    
                    <div style="margin-top: 20px; padding: 15px; background: #f8f9fa; border-radius: 8px; text-align: center;">
                        <p style="margin: 0; font-size: 14px; color: #495057;">
                            <strong>Thank you for your interest!</strong><br>
                            This quotation is computer generated and subject to terms mentioned below.
                        </p>
                    </div>
                </div>
                
                <!-- Totals Card -->
                <div class="totals-card">
                    <div class="card-header">
                        üí∞ Quote Summary
                    </div>
                    
                    <div class="total-row-new">
                        <span class="row-label">Subtotal:</span>
                        <span class="row-value">‚Çπ<%= quotation.subtotal.toFixed(2) %></span>
                    </div>
                    
                    <% if (quotation.discount && quotation.discount > 0) { %>
                        <div class="total-row-new">
                            <span class="row-label">Discount:</span>
                            <span class="row-value">-‚Çπ<%= quotation.discount.toFixed(2) %></span>
                        </div>
                    <% } %>
                    
                    <% if (quotation.gstEnabled && (quotation.documentType === 'GST' || quotation.documentType === 'gst') && quotation.cgstAmount > 0) { %>
                        <div class="total-row-new">
                            <span class="row-label">CGST:</span>
                            <span class="row-value">‚Çπ<%= quotation.cgstAmount.toFixed(2) %></span>
                        </div>
                        <div class="total-row-new">
                            <span class="row-label">SGST:</span>
                            <span class="row-value">‚Çπ<%= quotation.sgstAmount.toFixed(2) %></span>
                        </div>
                        <div class="total-row-new">
                            <span class="row-label">Total Tax:</span>
                            <span class="row-value">‚Çπ<%= (quotation.cgstAmount + quotation.sgstAmount).toFixed(2) %></span>
                        </div>
                    <% } %>
                    
                    <% if (quotation.roundOffAmount && Math.abs(quotation.roundOffAmount) > 0) { %>
                        <div class="total-row-new">
                            <span class="row-label">Round Off:</span>
                            <span class="row-value"><%= quotation.roundOffAmount >= 0 ? '+' : '' %>‚Çπ<%= quotation.roundOffAmount.toFixed(2) %></span>
                        </div>
                    <% } %>
                    
                    <div class="final-amount">
                        <div class="amount-label">Total Amount</div>
                        <div class="amount-value">‚Çπ<%= quotation.finalTotal.toFixed(2) %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Terms and Validity Section -->
        <div class="footer-info">
            <div class="terms-section">
                <h4>üìã Terms & Conditions</h4>
                <ul>
                    <li>This quotation is valid for <%= quotation.validityDays %> days from date of issue</li>
                    <li>Prices are subject to change without prior notice</li>
                    <li>All rates are inclusive of GST as applicable</li>
                    <li>Payment terms to be mutually agreed upon order confirmation</li>
                    <li>Delivery timeline will be confirmed at time of order placement</li>
                    <li>Subject to local jurisdiction only</li>
                </ul>
            </div>
            
            <div class="validity-section">
                <h4>‚è∞ Important Notes</h4>
                <p><strong>Quote Validity:</strong> <%= quotation.validityDays %> days from <%= new Date(quotation.quotationDate).toLocaleDateString('en-IN') %></p>
                <p><strong>Valid Until:</strong> <%= validityDate.toLocaleDateString('en-IN') %></p>
                <p><strong>Current Status:</strong> 
                    <span class="status-badge status-<%= status.toLowerCase() %>"><%= status %></span>
                </p>
                <% if (company.bankDetails) { %>
                <p><strong>For Advance Payment:</strong></p>
                <p>A/c Holder's Name: <%= company.bankDetails.accountName || company.name %></p>
                <p>Bank Name: <%= company.bankDetails.bankName || 'Available on Request' %></p>
                <p>A/c No: <%= company.bankDetails.accountNumber || 'XXXX-XXXX' %></p>
                <p>Branch & IFSC Code: <%= company.bankDetails.branchDetails || 'XXXX0000XXX' %></p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="actions">
        <div class="action-buttons">
            <a href="/quotations" class="btn btn-secondary">
                <span class="icon">‚Üê</span>
                <span>Back to Quotations</span>
            </a>
            
            <button onclick="printQuote()" class="btn btn-primary">
                <span class="icon">üñ®Ô∏è</span>
                <span>Print Quote</span>
            </button>
            
            <a href="/quotations/<%= quotation.id %>/print" target="_blank" class="btn btn-print-compact">
                <span class="icon">üìÑ</span>
                <span>Compact Print</span>
            </a>
            
            <% if (status !== 'Converted' && status !== 'Expired') { %>
            <button onclick="convertToBill('<%= quotation.id %>')" class="btn btn-convert">
                <span class="icon">üîÑ</span>
                <span>Convert to Bill</span>
            </button>
            <% } %>
            
            <a href="/quotations/new" class="btn btn-success">
                <span class="icon">‚ûï</span>
                <span>New Quote</span>
            </a>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Enhanced Print Function
        function printQuote() {
            // Add print-specific class to body
            document.body.classList.add('printing');
            
            // Optimize for print
            const originalTitle = document.title;
            document.title = 'Quotation-<%= quotation.quotationNumber %>-<%= new Date().toISOString().split("T")[0] %>';
            
            // Add print date for reference
            const printDate = new Date().toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            // Create print footer
            const printFooter = document.createElement('div');
            printFooter.className = 'print-only';
            printFooter.style.cssText = `
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                text-align: center;
                font-size: 8px;
                color: #666;
                background: white;
                padding: 5px;
                border-top: 1px solid #ddd;
                z-index: 1000;
            `;
            printFooter.innerHTML = `Printed on: ${printDate} | Quotation: <%= quotation.quotationNumber %>`;
            
            document.body.appendChild(printFooter);
            
            // Trigger print
            window.print();
            
            // Cleanup after print
            setTimeout(() => {
                document.body.classList.remove('printing');
                document.title = originalTitle;
                if (printFooter.parentNode) {
                    printFooter.parentNode.removeChild(printFooter);
                }
            }, 1000);
        }

        function convertToBill(quotationId) {
            if (confirm('üîÑ Are you sure you want to convert this quotation to a bill?\\n\\n' +
                       '‚úÖ This will create a new bill\\n' +
                       'üì¶ Stock levels will be updated\\n' +
                       'üë§ Customer data will be saved\\n' +
                       'üíú Quotation will be marked as converted\\n\\n' +
                       'This action cannot be undone!')) {
                
                // Show loading state
                const btn = event.target.closest('button');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<span>‚è≥</span> Converting...';
                btn.disabled = true;
                
                fetch(`/quotations/${quotationId}/convert`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        return response.text();
                    }
                })
                .then(data => {
                    if (data) {
                        // If we get here, there was an error
                        console.error('Error response:', data);
                        alert('‚ùå Error converting quotation to bill. Please try again.');
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('‚ùå Error converting quotation to bill. Please try again.');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });
            }
        }
    </script>
    </main>

    <%- include('../partials/scripts') %>
</body>
</html>