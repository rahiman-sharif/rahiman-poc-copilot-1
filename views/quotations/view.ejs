<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Purple theme for quotation view */
        .quotation-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
            padding: 24px;
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            border-radius: 12px;
            color: white;
        }
        
        .header-left h2 {
            margin: 0 0 8px 0;
            font-size: 28px;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .header-left p {
            margin: 0;
            opacity: 0.9;
        }
        
        .action-buttons {
            display: flex;
            gap: 12px;
        }
        
        .btn {
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            border: none;
        }
        
        .btn-secondary {
            background: white;
            color: #8b5cf6;
        }
        
        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
        }
        
        .btn-print {
            background: #10b981;
            color: white;
        }
        
        .btn-print:hover {
            background: #059669;
            transform: translateY(-2px);
        }
        
        .btn-convert {
            background: #3b82f6;
            color: white;
        }
        
        .btn-convert:hover {
            background: #2563eb;
            transform: translateY(-2px);
        }
        
        .btn-danger {
            background: #ef4444;
            color: white;
        }
        
        .btn-danger:hover {
            background: #dc2626;
            transform: translateY(-2px);
        }
        
        .quotation-status {
            margin-bottom: 24px;
            text-align: center;
        }
        
        .status-badge {
            padding: 12px 24px;
            border-radius: 25px;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            display: inline-block;
        }
        
        .status-valid {
            background: #dcfce7;
            color: #166534;
        }
        
        .status-expired {
            background: #fee2e2;
            color: #991b1b;
        }
        
        .status-converted {
            background: #dbeafe;
            color: #1e40af;
        }
        
        .quotation-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            border: 2px solid #e5e7eb;
        }
        
        .quotation-header {
            background: linear-gradient(135deg, #faf5ff, #f3e8ff);
            padding: 32px;
            border-bottom: 2px solid #8b5cf6;
        }
        
        .company-info {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .company-info h1 {
            margin: 0 0 8px 0;
            font-size: 32px;
            color: #8b5cf6;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }
        
        .company-info p {
            margin: 4px 0;
            color: #6b7280;
        }
        
        .quotation-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 32px;
            margin-top: 24px;
        }
        
        .customer-info, .quotation-info {
            background: white;
            padding: 24px;
            border-radius: 12px;
            border: 2px solid #e5e7eb;
        }
        
        .info-section h3 {
            margin: 0 0 16px 0;
            font-size: 18px;
            color: #8b5cf6;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            padding: 8px 0;
            border-bottom: 1px solid #f3f4f6;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 600;
            color: #374151;
        }
        
        .info-value {
            color: #6b7280;
            text-align: right;
        }
        
        .quotation-body {
            padding: 32px;
        }
        
        .items-section h3 {
            margin: 0 0 24px 0;
            font-size: 20px;
            color: #8b5cf6;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .items-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-bottom: 24px;
            border-radius: 12px;
            overflow: hidden;
            border: 2px solid #e5e7eb;
        }
        
        .items-table th {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            color: white;
            padding: 16px 12px;
            text-align: left;
            font-weight: 600;
            font-size: 14px;
        }
        
        .items-table td {
            padding: 16px 12px;
            border-bottom: 1px solid #e5e7eb;
            vertical-align: top;
        }
        
        .items-table tbody tr:last-child td {
            border-bottom: none;
        }
        
        .items-table .text-right {
            text-align: right;
        }
        
        .items-table .amount {
            font-weight: 600;
            color: #059669;
        }
        
        .charges-section {
            margin: 32px 0;
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            border-radius: 12px;
            padding: 24px;
            border: 2px solid #f59e0b;
        }
        
        .charges-section h4 {
            margin: 0 0 16px 0;
            color: #92400e;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .charge-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f59e0b;
        }
        
        .charge-item:last-child {
            border-bottom: none;
        }
        
        .charge-desc {
            font-weight: 500;
            color: #92400e;
        }
        
        .charge-amount {
            font-weight: 600;
            color: #92400e;
        }
        
        .totals-section {
            background: linear-gradient(135deg, #faf5ff, #f3e8ff);
            padding: 24px;
            border-radius: 12px;
            border: 2px solid #8b5cf6;
            margin-top: 24px;
        }
        
        .totals-grid {
            display: grid;
            grid-template-columns: 1fr 200px;
            gap: 12px;
            align-items: center;
        }
        
        .total-row {
            display: contents;
        }
        
        .total-label {
            text-align: right;
            font-weight: 600;
            color: #374151;
            padding: 8px 0;
        }
        
        .total-amount {
            text-align: right;
            padding: 12px;
            background: white;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            font-weight: 600;
            color: #059669;
        }
        
        .final-total .total-amount {
            font-size: 20px;
            font-weight: bold;
            color: #8b5cf6;
            border-color: #8b5cf6;
            background: linear-gradient(135deg, #faf5ff, #f3e8ff);
        }
        
        .quotation-notes {
            margin-top: 32px;
            padding: 20px;
            background: #f9fafb;
            border-radius: 8px;
            border-left: 4px solid #8b5cf6;
        }
        
        .quotation-notes h4 {
            margin: 0 0 12px 0;
            color: #8b5cf6;
        }
        
        .validity-warning {
            background: #fef3c7;
            border: 2px solid #f59e0b;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            text-align: center;
        }
        
        .validity-warning.expired {
            background: #fee2e2;
            border-color: #ef4444;
            color: #991b1b;
        }
        
        .print-only {
            display: none;
        }
        
        @media print {
            .no-print {
                display: none !important;
            }
            
            .print-only {
                display: block;
            }
            
            .quotation-container {
                max-width: none;
                margin: 0;
                padding: 0;
            }
            
            .quotation-card {
                box-shadow: none;
                border: 1px solid #ccc;
            }
            
            .page-header {
                background: #8b5cf6 !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
    </style>
</head>
<body>
    <% 
        // Global variables for quotation status and validity
        const validUntil = new Date(quotation.validUntil);
        const quotationIsExpired = validUntil < new Date();
        const quotationStatus = quotation.status || 'active';
        let isExpired = quotationIsExpired; // For backward compatibility
        let status = quotationStatus; // For backward compatibility
        if (status === 'active' && isExpired) status = 'expired';
    %>
    <!-- Header -->
    <header class="main-header no-print">
        <div class="header-content">
            <div class="logo-section">
                <h1>🏢 Vikram Steels</h1>
                <p>Quotation Details</p>
            </div>
            
            <div class="user-section">
                <div class="user-info">
                    <span class="user-name">Welcome, <%= user.name %></span>
                    <span class="user-role">(<%= user.role %>)</span>
                </div>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="breadcrumb no-print">
        <div class="breadcrumb-content">
            <a href="/dashboard">🏠 Dashboard</a>
            <span class="separator">></span>
            <a href="/quotations">💜 Quotations</a>
            <span class="separator">></span>
            <span class="current">💜 <%= quotation.quotationNumber %></span>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="quotation-main">
        <div class="quotation-container">
            <!-- Page Header -->
            <div class="page-header no-print">
                <div class="header-left">
                    <h2>💜 Quotation Details</h2>
                    <p><%= quotation.quotationNumber %></p>
                </div>
                <div class="header-right">
                    <div class="action-buttons">
                        <a href="/quotations" class="btn btn-secondary">
                            <span>←</span>
                            Back to List
                        </a>
                        <% if (status === 'active' && !isExpired) { %>
                            <button onclick="convertToBill('<%= quotation.id %>')" class="btn btn-convert">
                                <span>🔄</span>
                                Convert to Bill
                            </button>
                        <% } %>
                        <a href="/quotations/<%= quotation.id %>/print" class="btn btn-print" target="_blank">
                            <span>🖨️</span>
                            Print
                        </a>
                        <% if (user.role === 'admin' || user.role === 'manager') { %>
                            <button onclick="deleteQuotation('<%= quotation.id %>')" class="btn btn-danger">
                                <span>🗑️</span>
                                Delete
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Quotation Status -->
            <div class="quotation-status no-print">
                <span class="status-badge status-<%= status %>">
                    <% if (status === 'active') { %>💚 Valid Quotation
                    <% } else if (status === 'expired') { %>⏰ Expired Quotation
                    <% } else if (status === 'converted') { %>✅ Converted to Bill
                    <% } %>
                </span>
            </div>

            <!-- Validity Warning -->
            <% if (status === 'expired') { %>
                <div class="validity-warning expired no-print">
                    <strong>⚠️ This quotation has expired on <%= validUntil.toLocaleDateString('en-IN') %></strong>
                </div>
            <% } else if (status === 'active') { %>
                <% 
                    const daysLeft = Math.ceil((validUntil - new Date()) / (1000 * 60 * 60 * 24));
                %>
                <% if (daysLeft <= 7 && daysLeft > 0) { %>
                    <div class="validity-warning no-print">
                        <strong>⏰ This quotation expires in <%= daysLeft %> day<%= daysLeft === 1 ? '' : 's' %> on <%= validUntil.toLocaleDateString('en-IN') %></strong>
                    </div>
                <% } %>
            <% } %>

            <!-- Alert Messages -->
            <% if (typeof query !== 'undefined' && query.success) { %>
                <div class="alert alert-success no-print">
                    <%= query.success %>
                </div>
            <% } %>
            
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="alert alert-error no-print">
                    <%= query.error %>
                </div>
            <% } %>

            <!-- Quotation Card -->
            <div class="quotation-card">
                <!-- Quotation Header -->
                <div class="quotation-header">
                    <!-- Company Information -->
                    <div class="company-info">
                        <h1>🏢 Vikram Steels</h1>
                        <% if (company && company.address) { %>
                            <p><%= company.address.street %></p>
                            <p><%= company.address.city %>, <%= company.address.state %> - <%= company.address.pincode %></p>
                        <% } %>
                        <% if (company && company.contact) { %>
                            <p>📞 <%= company.contact.phone %> | 📧 <%= company.contact.email %></p>
                        <% } %>
                        <% if (company && company.gst && company.gst.gstin) { %>
                            <p>GST: <%= company.gst.gstin %></p>
                        <% } %>
                    </div>

                    <!-- Quotation Details -->
                    <div class="quotation-details">
                        <!-- Customer Information -->
                        <div class="customer-info info-section">
                            <h3>👤 Customer Details</h3>
                            <div class="info-row">
                                <span class="info-label">Name:</span>
                                <span class="info-value"><%= customer.name %></span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Phone:</span>
                                <span class="info-value"><%= customer.phone || customer.contact?.phone || '' %></span>
                            </div>
                            <% if (customer.email) { %>
                                <div class="info-row">
                                    <span class="info-label">Email:</span>
                                    <span class="info-value"><%= customer.email %></span>
                                </div>
                            <% } %>
                            <% if (customer.address) { %>
                                <div class="info-row">
                                    <span class="info-label">Address:</span>
                                    <span class="info-value"><%= customer.address %></span>
                                </div>
                            <% } %>
                            <% if (customer.gstin || customer.gst?.gstin) { %>
                                <div class="info-row">
                                    <span class="info-label">GST:</span>
                                    <span class="info-value"><%= customer.gstin || customer.gst?.gstin || '' %></span>
                                </div>
                            <% } %>
                        </div>

                        <!-- Quotation Information -->
                        <div class="quotation-info info-section">
                            <h3>💜 Quotation Details</h3>
                            <div class="info-row">
                                <span class="info-label">Quotation #:</span>
                                <span class="info-value"><%= quotation.quotationNumber %></span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Date:</span>
                                <span class="info-value"><%= new Date(quotation.quotationDate).toLocaleDateString('en-IN') %></span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Valid Until:</span>
                                <span class="info-value">
                                    <%= validUntil.toLocaleDateString('en-IN') %>
                                    <% if (isExpired) { %>
                                        <br><small style="color: #ef4444;">Expired</small>
                                    <% } %>
                                </span>
                            </div>
                            <div class="info-row">
                                <span class="info-label">Validity:</span>
                                <span class="info-value"><%= quotation.validityDays %> Days</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quotation Body -->
                <div class="quotation-body">
                    <!-- Items Section -->
                    <div class="items-section">
                        <h3>📦 Items</h3>
                        <table class="items-table">
                            <thead>
                                <tr>
                                    <th style="width: 60px;">S.No</th>
                                    <th>Material</th>
                                    <th style="width: 100px;">HSN</th>
                                    <th style="width: 100px;">Qty</th>
                                    <th style="width: 100px;" class="text-right">Rate</th>
                                    <th style="width: 120px;" class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% quotation.items.forEach((item, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <strong><%= item.itemName %></strong>
                                            <% if (item.bundleInfo) { %>
                                                <br><small><%= item.bundleInfo %></small>
                                            <% } %>
                                        </td>
                                        <td><%= item.hsnCode || '-' %></td>
                                        <td><%= item.quantity %></td>
                                        <td class="text-right">₹<%= item.rate.toFixed(2) %></td>
                                        <td class="text-right amount">₹<%= item.amount.toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Extra Charges Section -->
                    <% if (quotation.extraCharges && quotation.extraCharges.length > 0) { %>
                        <div class="charges-section">
                            <h4>🚛 Additional Charges</h4>
                            <% quotation.extraCharges.forEach(charge => { %>
                                <div class="charge-item">
                                    <span class="charge-desc">
                                        <%= charge.description %>
                                        <% if (charge.gstRate > 0) { %>
                                            <small> (+ <%= charge.gstRate %>% GST)</small>
                                        <% } %>
                                    </span>
                                    <span class="charge-amount">₹<%= charge.amount.toFixed(2) %></span>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>

                    <!-- Totals Section -->
                    <div class="totals-section">
                        <div class="totals-grid">
                            <div class="total-row">
                                <div class="total-label">Subtotal:</div>
                                <div class="total-amount">₹<%= quotation.subtotal.toFixed(2) %></div>
                            </div>
                            <% if (quotation.cgstAmount > 0) { %>
                                <div class="total-row">
                                    <div class="total-label">CGST:</div>
                                    <div class="total-amount">₹<%= quotation.cgstAmount.toFixed(2) %></div>
                                </div>
                            <% } %>
                            <% if (quotation.sgstAmount > 0) { %>
                                <div class="total-row">
                                    <div class="total-label">SGST:</div>
                                    <div class="total-amount">₹<%= quotation.sgstAmount.toFixed(2) %></div>
                                </div>
                            <% } %>
                            <div class="total-row final-total">
                                <div class="total-label">Total:</div>
                                <div class="total-amount">₹<%= quotation.finalTotal.toFixed(2) %></div>
                            </div>
                        </div>
                    </div>

                    <!-- Notes Section -->
                    <div class="quotation-notes">
                        <h4>📝 Terms & Conditions</h4>
                        <p>• This quotation is valid for <%= quotation.validityDays %> days from the date of issue.</p>
                        <p>• Prices are subject to change without prior notice.</p>
                        <p>• All rates are inclusive of GST as applicable.</p>
                        <p>• Payment terms to be mutually agreed upon order confirmation.</p>
                        <p>• Delivery timeline will be confirmed at the time of order placement.</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- JavaScript -->
    <script>
        function deleteQuotation(quotationId) {
            if (confirm('🚨 Are you sure you want to delete this quotation? This action cannot be undone.')) {
                fetch(`/quotations/${quotationId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/quotations?success=' + encodeURIComponent('Quotation deleted successfully');
                    } else {
                        alert('❌ Error deleting quotation: ' + (data.error || 'Unknown error'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('❌ Error deleting quotation. Please try again.');
                });
            }
        }

        function convertToBill(quotationId) {
            if (confirm('🔄 Are you sure you want to convert this quotation to a bill?\\n\\n' +
                       '✅ This will create a new bill\\n' +
                       '📦 Stock levels will be updated\\n' +
                       '👤 Customer data will be saved\\n' +
                       '💜 Quotation will be marked as converted\\n\\n' +
                       'This action cannot be undone!')) {
                
                // Show loading state
                const btn = event.target.closest('.btn-convert');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<span>⏳</span> Converting...';
                btn.disabled = true;
                
                fetch(`/quotations/${quotationId}/convert`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        return response.text();
                    }
                })
                .then(data => {
                    if (data) {
                        // If we get here, there was an error
                        console.error('Error response:', data);
                        alert('❌ Error converting quotation to bill. Please try again.');
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('❌ Error converting quotation to bill. Please try again.');
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });
            }
        }
    </script>
</body>
</html>
