<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Filter Form Styles */
        .filter-form {
            margin-bottom: 20px;
        }
        
        .search-controls {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            align-items: end;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #e9ecef;
        }
        
        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
            min-width: 150px;
        }
        
        .filter-group label {
            font-weight: 600;
            color: #495057;
            font-size: 14px;
        }
        
        .filter-select, .date-input {
            padding: 8px 12px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 14px;
            background: white;
        }
        
        .custom-date-inputs {
            display: flex;
            gap: 15px;
            align-items: end;
        }
        
        .date-input-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        
        .date-input-group label {
            font-weight: 600;
            color: #495057;
            font-size: 14px;
        }
        
        .filter-actions {
            display: flex;
            gap: 10px;
            align-items: end;
        }
        
        .filter-actions .btn {
            padding: 8px 16px;
            font-size: 13px;
        }
        
        .filter-summary {
            margin: 10px 0;
            padding: 10px 15px;
            background: #e3f2fd;
            border-radius: 4px;
            border-left: 4px solid #2196f3;
        }
        
        .filter-info {
            color: #1976d2;
            font-weight: 500;
        }
        
        @media (max-width: 768px) {
            .search-controls {
                flex-direction: column;
                align-items: stretch;
            }
            
            .filter-group {
                min-width: auto;
            }
            
            .custom-date-inputs {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
    <%- include('../partials/styles') %>
</head>
<body>
    <%- include('../partials/header') %>
    <nav class="breadcrumb">
        <div class="breadcrumb-content">
            <a href="/dashboard">üè† Dashboard</a>
            <span class="separator">></span>
            <span class="current">üìù Billing System</span>
        </div>
    </nav>
    <main class="main-content">
    <!-- Main Content -->
    <main class="items-main">
        <div class="items-container">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h2>üìù Billing System</h2>
                    <p>Create bills and manage transactions</p>
                </div>
                <div class="header-right">
                    <a href="/bills/new" class="btn btn-primary">
                        <span class="btn-icon">üìù‚ûï</span>
                        New Bill
                    </a>
                </div>
            </div>

            <!-- Alert Messages -->
            <% if (typeof query !== 'undefined' && query.success) { %>
                <div class="alert alert-success">
                    <%= query.success %>
                </div>
            <% } %>
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="alert alert-error">
                    <%= query.error %>
                </div>
            <% } %>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üìÑ</div>
                    <div class="stat-info">
                        <h3>Total Bills</h3>
                        <p class="stat-number"><%= totalBills %></p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üìã</div>
                    <div class="stat-info">
                        <h3>Today's Bills</h3>
                        <p class="stat-number"><%= todaysBills %></p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üí∞</div>
                    <div class="stat-info">
                        <h3>Total Revenue</h3>
                        <p class="stat-number">‚Çπ<%= totalAmount.toLocaleString() %></p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üíµ</div>
                    <div class="stat-info">
                        <h3>Today's Revenue</h3>
                        <p class="stat-number">‚Çπ<%= todaysAmount.toLocaleString() %></p>
                    </div>
                </div>
            </div>
        </br>
            <!-- Search and Filter Section -->
            <div class="search-section">
                <form method="GET" action="/bills" class="filter-form">
                    <div class="search-controls">
                        <div class="search-box">
                            <input type="text" id="searchInput" placeholder="üîç Search bills..." class="search-input">
                        </div>
                        
                        <!-- Date Range Filter -->
                        <div class="filter-group">
                            <label for="dateRange">üìÖ Date Range:</label>
                            <select name="dateRange" id="dateRange" class="filter-select" onchange="toggleCustomDates()">
                                <option value="today" <%= currentDateRange === 'today' ? 'selected' : '' %>>Current Day</option>
                                <option value="month" <%= currentDateRange === 'month' ? 'selected' : '' %>>Last 30 Days</option>
                                <option value="all" <%= currentDateRange === 'all' ? 'selected' : '' %>>All Time</option>
                                <option value="custom" <%= currentDateRange === 'custom' ? 'selected' : '' %>>Custom Range</option>
                            </select>
                        </div>
                        
                        <!-- Custom Date Inputs -->
                        <div class="custom-date-inputs" id="customDateInputs" <% if (currentDateRange === 'custom') { %>style="display: flex;"<% } else { %>style="display: none;"<% } %>>
                            <div class="date-input-group">
                                <label for="fromDate">From:</label>
                                <input type="date" name="fromDate" id="fromDate" value="<%= fromDate %>" class="date-input">
                            </div>
                            <div class="date-input-group">
                                <label for="toDate">To:</label>
                                <input type="date" name="toDate" id="toDate" value="<%= toDate %>" class="date-input">
                            </div>
                        </div>
                        
                        <!-- GST Filter -->
                        <div class="filter-group">
                            <label for="gstFilter">üìä GST Type:</label>
                            <select name="gstFilter" id="gstFilter" class="filter-select">
                                <option value="all" <%= currentGstFilter === 'all' ? 'selected' : '' %>>All Bills</option>
                                <option value="gst" <%= currentGstFilter === 'gst' ? 'selected' : '' %>>GST Bills Only</option>
                                <option value="normal" <%= currentGstFilter === 'normal' ? 'selected' : '' %>>Non-GST Bills Only</option>
                            </select>
                        </div>
                        
                        <!-- Filter Buttons -->
                        <div class="filter-actions">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <a href="/bills" class="btn btn-secondary">Reset</a>
                        </div>
                    </div>
                </form>
                
                <!-- Filter Summary -->
                <div class="filter-summary">
                    <span class="filter-info">
                        Showing <%= bills.length %> bills
                        <% if (currentDateRange === 'today') { %>
                            (Today)
                        <% } else if (currentDateRange === 'month') { %>
                            (Last 30 days)
                        <% } else if (currentDateRange === 'custom' && fromDate && toDate) { %>
                            (From <%= new Date(fromDate).toLocaleDateString() %> to <%= new Date(toDate).toLocaleDateString() %>)
                        <% } else if (currentDateRange === 'all') { %>
                            (All time)
                        <% } %>
                        
                        <% if (currentGstFilter === 'gst') { %>
                            - GST Bills only
                        <% } else if (currentGstFilter === 'normal') { %>
                            - Non-GST Bills only
                        <% } %>
                    </span>
                </div>
            </div>

            <!-- Bills Table -->
            <div class="items-table-container">
                <% if (bills.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-icon">üìù</div>
                        <h3>No Bills Found</h3>
                        <p>Start by creating your first bill.</p>
                        <a href="/bills/new" class="btn btn-primary">Create First Bill</a>
                    </div>
                <% } else { %>
                    <table class="items-table" id="billsTable">
                        <thead>
                            <tr>
                                <th>Bill #</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th>Amount</th>
                                <th>GST</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bills.forEach(bill => { %>
                                <tr class="item-row" data-date="<%= bill.billDate %>">
                                    <td>
                                        <strong>#<%= bill.billNumber %></strong>
                                        <!-- <small class="bill-id"><%= bill.id %></small> -->
                                    </td>
                                    <td>
                                        <div class="date-info">
                                            <strong><%= new Date(bill.billDate).toLocaleDateString() %></strong>
                                            <small><%= new Date(bill.billDate).toLocaleTimeString() %></small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="customer-info">
                                            <strong><%= bill.customerName %></strong>
                                            <small><%= bill.customerPhone %></small>
                                            <% if (bill.customerGstin) { %>
                                                <small class="gstin">GST: <%= bill.customerGstin %></small>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="items-summary">
                                            <strong><%= bill.items.length %> items</strong>
                                            <% if (bill.extraCharges && bill.extraCharges.length > 0) { %>
                                                <small>+ <%= bill.extraCharges.length %> charges</small>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="amount">‚Çπ<%= bill.subtotal.toLocaleString() %></span>
                                    </td>
                                    <td>
                                        <div class="gst-info">
                                            <% if (bill.totalGst > 0) { %>
                                                <strong>‚Çπ<%= bill.totalGst.toLocaleString() %></strong>
                                                <small>CGST: ‚Çπ<%= bill.cgstAmount.toLocaleString() %></small>
                                                <small>SGST: ‚Çπ<%= bill.sgstAmount.toLocaleString() %></small>
                                            <% } else { %>
                                                <span class="no-gst">‚Çπ0</span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <strong class="final-total">‚Çπ<%= bill.finalTotal.toLocaleString() %></strong>
                                        <small class="payment-method"><%= bill.paymentMethod || 'Cash' %></small>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/bills/<%= bill.id %>" class="btn btn-sm btn-secondary" title="View Bill">
                                                üëÅÔ∏è
                                            </a>
                                            <a href="/bills/<%= bill.id %>/print" class="btn btn-sm btn-info" title="Print Bill" target="_blank">
                                                üñ®Ô∏è
                                            </a>
                                            <% if (user.role === 'admin') { %>
                                                <button onclick="deleteBill('<%= bill.id %>', '<%= bill.billNumber %>')" 
                                                        class="btn btn-sm btn-danger" title="Delete Bill">
                                                    üóëÔ∏è
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <h3>üóëÔ∏è Delete Bill</h3>
            <p>Are you sure you want to delete Bill #<strong id="deleteBillNumber"></strong>?</p>
            <p class="warning-text">This action cannot be undone.</p>
            <div class="modal-actions">
                <button onclick="closeDeleteModal()" class="btn btn-secondary">Cancel</button>
                <form id="deleteForm" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            filterBills();
        });

        // Date filter functionality
        document.getElementById('dateFilter').addEventListener('change', function() {
            filterBills();
        });

        function filterBills() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const dateFilter = document.getElementById('dateFilter').value;
            const rows = document.querySelectorAll('.item-row');

            rows.forEach(row => {
                const billNumber = row.querySelector('strong').textContent.toLowerCase();
                const customerName = row.querySelector('.customer-info strong').textContent.toLowerCase();
                const billDate = new Date(row.dataset.date);
                
                const matchesSearch = billNumber.includes(searchTerm) || customerName.includes(searchTerm);
                const matchesDate = checkDateFilter(billDate, dateFilter);

                if (matchesSearch && matchesDate) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function checkDateFilter(billDate, filter) {
            if (!filter) return true;
            
            const today = new Date();
            const billDateOnly = new Date(billDate.getFullYear(), billDate.getMonth(), billDate.getDate());
            const todayOnly = new Date(today.getFullYear(), today.getMonth(), today.getDate());

            switch (filter) {
                case 'today':
                    return billDateOnly.getTime() === todayOnly.getTime();
                case 'week':
                    const weekAgo = new Date(today);
                    weekAgo.setDate(today.getDate() - 7);
                    return billDate >= weekAgo;
                case 'month':
                    const monthAgo = new Date(today);
                    monthAgo.setMonth(today.getMonth() - 1);
                    return billDate >= monthAgo;
                default:
                    return true;
            }
        }

        // Delete bill functionality
        function deleteBill(billId, billNumber) {
            document.getElementById('deleteBillNumber').textContent = billNumber;
            document.getElementById('deleteForm').action = `/bills/${billId}/delete`;
            document.getElementById('deleteModal').style.display = 'flex';
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }

        // Toggle custom date inputs
        function toggleCustomDates() {
            const dateRange = document.getElementById('dateRange').value;
            const customInputs = document.getElementById('customDateInputs');
            
            if (dateRange === 'custom') {
                customInputs.style.display = 'flex';
                // Set default dates if empty
                const fromInput = document.getElementById('fromDate');
                const toInput = document.getElementById('toDate');
                if (!fromInput.value) {
                    const today = new Date();
                    const thirtyDaysAgo = new Date(today);
                    thirtyDaysAgo.setDate(today.getDate() - 30);
                    fromInput.value = thirtyDaysAgo.toISOString().split('T')[0];
                    toInput.value = today.toISOString().split('T')[0];
                }
            } else {
                customInputs.style.display = 'none';
            }
        }

        // Close modal when clicking outside
        window.addEventListener('click', function(e) {
            if (e.target === document.getElementById('deleteModal')) {
                closeDeleteModal();
            }
        });

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);
    </script>
    </main>

    
</body>
</html>