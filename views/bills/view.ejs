<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Desktop-Optimized Bill View Design */
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .invoice-container {
            max-width: 1200px;
            margin: 30px auto;
            background: white;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            border-radius: 16px;
            overflow: visible;
            position: relative;
        }
        
        .invoice-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #007bff, #0056b3, #007bff);
        }
        
        .invoice-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 40px;
            position: relative;
        }
        
        .company-info {
            text-align: center;
            margin-bottom: 30px;
            position: relative;
        }
        
        .company-name {
            font-size: 42px;
            font-weight: 700;
            color: #007bff;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 123, 255, 0.1);
            letter-spacing: 1px;
        }
        
        .company-details {
            font-size: 16px;
            color: #6c757d;
            line-height: 1.6;
            font-weight: 500;
        }
        
        .invoice-title {
            text-align: center;
            font-size: 32px;
            font-weight: 700;
            color: #495057;
            margin: 40px 0;
            text-transform: uppercase;
            letter-spacing: 3px;
            position: relative;
        }
        
        .invoice-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #007bff, #0056b3);
            border-radius: 2px;
        }
        
        /* GST vs Non-GST Styling */
        .bill-type-indicator {
            text-align: center;
            margin: 20px 0;
        }
        
        .bill-type-badge {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .gst-badge {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: 2px solid #28a745;
        }
        
        .non-gst-badge {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
            color: #212529;
            border: 2px solid #ffc107;
        }
        
        .invoice-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            margin-bottom: 40px;
            padding: 0 20px;
        }
        
        .bill-to, .bill-details {
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            padding: 30px;
            border-radius: 12px;
            border: 1px solid #e9ecef;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            position: relative;
        }
        
        .bill-to::before, .bill-details::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #007bff, #28a745);
            border-radius: 12px 12px 0 0;
        }
        
        .section-title {
            font-weight: 700;
            color: #007bff;
            margin-bottom: 20px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .section-title::before {
            content: '';
            width: 8px;
            height: 8px;
            background: #007bff;
            border-radius: 50%;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #f1f3f4;
            min-height: 20px;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 600;
            color: #6c757d;
            font-size: 14px;
            white-space: nowrap;
        }
        
        .info-value {
            font-weight: 700;
            color: #495057;
            font-size: 14px;
            text-align: right;
        }
        
        .items-section {
            padding: 0 20px 40px;
        }
        
        .services-section {
            padding: 0 20px 40px;
        }
        
        .items-table-wrapper, .services-table-wrapper {
            overflow-x: auto;
            margin-bottom: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }
        
        .items-header, .services-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
            font-size: 24px;
            font-weight: 700;
            color: #495057;
        }
        
        .items-header::before {
            content: 'üì¶';
            font-size: 28px;
        }
        
        .services-header::before {
            content: '‚öôÔ∏è';
            font-size: 28px;
        }
        
        .items-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 12px;
            overflow: hidden;
            min-width: 800px;
            table-layout: auto;
        }
        
        .items-table th,
        .items-table td {
            border: 1px solid #e9ecef;
            padding: 12px 8px;
            vertical-align: middle;
            white-space: nowrap;
        }
        
        .items-table .item-name {
            white-space: normal;
            word-wrap: break-word;
            min-width: 200px;
            max-width: 300px;
        }
        
        .items-table th {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            padding: 18px 15px;
            text-align: center;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            vertical-align: middle;
            border: 1px solid #0056b3;
        }
        
        .items-table td {
            padding: 16px 15px;
            border-bottom: 1px solid #f1f3f4;
            border-right: 1px solid #f1f3f4;
            font-size: 14px;
            background: white;
            vertical-align: middle;
        }
        
        .items-table .text-right {
            text-align: right;
        }
        
        .items-table .text-center {
            text-align: center;
        }
        
        .items-table tbody tr:nth-child(even) {
            background: #f8f9fa;
        }
        
        .items-table tbody tr:hover {
            background: #e3f2fd;
            transition: background-color 0.3s ease;
        }
        
        .item-name {
            font-weight: 700;
            color: #495057;
            margin-bottom: 4px;
        }
        
        .item-details {
            font-size: 12px;
            color: #6c757d;
            font-style: italic;
        }
        
        /* Services Table Styles */
        .services-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 12px;
            overflow: hidden;
            min-width: 600px;
            table-layout: auto;
        }
        
        .services-table th,
        .services-table td {
            border: 1px solid #e9ecef;
            padding: 12px 8px;
            vertical-align: middle;
            white-space: nowrap;
        }
        
        .services-table .service-name {
            white-space: normal;
            word-wrap: break-word;
            min-width: 200px;
            max-width: 350px;
            font-weight: 700;
            color: #495057;
        }
        
        .services-table th {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
            color: white;
            padding: 18px 15px;
            text-align: center;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            vertical-align: middle;
            border: 1px solid #1e7e34;
        }
        
        .services-table td {
            padding: 16px 15px;
            border-bottom: 1px solid #f1f3f4;
            border-right: 1px solid #f1f3f4;
            font-size: 14px;
            background: white;
            vertical-align: middle;
        }
        
        .services-table .text-right {
            text-align: right;
        }
        
        .services-table .text-center {
            text-align: center;
        }
        
        .services-table tbody tr:nth-child(even) {
            background: #f0fff4;
        }
        
        .services-table tbody tr:hover {
            background: #d4edda;
            transition: background-color 0.3s ease;
        }
        
        .text-right {
            text-align: right;
            font-weight: 600;
        }
        
        .amount-highlight {
            color: #28a745;
            font-weight: 700;
        }
        
        /* Totals Section - Redesigned */
        .totals-section {
            background: #f8f9fa;
            padding: 30px 20px;
            border-top: 3px solid #007bff;
        }
        
        .totals-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }
        
        @media (max-width: 768px) {
            .totals-wrapper {
                grid-template-columns: 1fr;
                gap: 20px;
            }
        }
        
        .payment-card, .totals-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            border: 1px solid #e9ecef;
        }
        
        .card-header {
            font-weight: 700;
            color: #007bff;
            margin-bottom: 20px;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f1f3f4;
        }
        
        .payment-row, .total-row-new {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #f8f9fa;
        }
        
        .payment-row:last-child, .total-row-new:last-child {
            border-bottom: none;
        }
        
        .row-label {
            font-weight: 600;
            color: #6c757d;
            font-size: 15px;
        }
        
        .row-value {
            font-weight: 700;
            color: #495057;
            font-size: 15px;
        }
        
        .final-amount {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 20px;
            border-radius: 12px;
            margin-top: 15px;
            text-align: center;
        }
        
        .final-amount .amount-label {
            font-size: 14px;
            opacity: 0.9;
            margin-bottom: 5px;
        }
        
        .final-amount .amount-value {
            font-size: 28px;
            font-weight: 800;
            margin: 0;
        }
        
        .thank-you-section {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e9ecef;
            text-align: center;
        }
        
        .thank-you-section p {
            margin: 0;
            color: #6c757d;
            font-size: 14px;
            line-height: 1.6;
        }
        
        .thank-you-section strong {
            color: #495057;
            display: block;
            margin-bottom: 5px;
        }
        
        .action-buttons {
            text-align: center;
            padding: 30px 40px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
            display: flex;
            justify-content: center;
            gap: 20px;
        }
        
        .btn {
            padding: 14px 28px;
            border-radius: 8px;
            font-weight: 700;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 123, 255, 0.4);
        }
        
        .btn-secondary {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        }
        
        .btn-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(108, 117, 125, 0.4);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        }
        
        .btn-success:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
        }
        
        /* Charges Section */
        .charges-section {
            margin-top: 30px;
        }
        
        .charges-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
            font-size: 20px;
            font-weight: 700;
            color: #495057;
        }
        
        .charges-header::before {
            content: 'üí∞';
            font-size: 24px;
        }
        
        .charges-table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }
        
        .charges-table th {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
            color: white;
            padding: 16px 15px;
            text-align: left;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .charges-table td {
            padding: 14px 15px;
            border-bottom: 1px solid #f1f3f4;
            font-size: 14px;
            background: white;
        }
        
        .charges-table tbody tr:nth-child(even) {
            background: #f8f9fa;
        }
        
        /* Status Badges */
        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .status-paid {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .status-pending {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }
        
        /* Footer Information Styles */
        .footer-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            padding: 30px 40px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
        }
        
        .terms-section h4,
        .bank-details h4 {
            color: #007bff;
            font-size: 16px;
            font-weight: 700;
            margin-bottom: 15px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        
        .terms-section ul {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }
        
        .terms-section ul li {
            padding: 8px 0;
            border-bottom: 1px solid #e9ecef;
            color: #495057;
            font-size: 14px;
            position: relative;
            padding-left: 20px;
        }
        
        .terms-section ul li::before {
            content: '‚úì';
            position: absolute;
            left: 0;
            color: #28a745;
            font-weight: bold;
        }
        
        .terms-section ul li:last-child {
            border-bottom: none;
        }
        
        .bank-details p {
            margin: 8px 0;
            color: #495057;
            font-size: 14px;
        }
        
        .bank-details strong {
            color: #007bff;
            font-weight: 600;
        }
        
        
        /* Comprehensive Print Styles for Bills */
        @media print {
            /* Reset and basic setup */
            * {
                -webkit-print-color-adjust: exact !important;
                color-adjust: exact !important;
                print-color-adjust: exact !important;
            }
            
            body {
                background: white !important;
                margin: 0 !important;
                padding: 0 !important;
                font-size: 11px !important;
                line-height: 1.3 !important;
                color: #000 !important;
            }
            
            /* Hide unnecessary elements */
            .actions, .main-header, nav, .action-buttons, 
            .status-badge, .hover-effects, .btn,
            .invoice-container::before {
                display: none !important;
            }
            
            /* Container adjustments */
            .invoice-container {
                box-shadow: none !important;
                margin: 0 !important;
                padding: 0 !important;
                border-radius: 0 !important;
                max-width: 100% !important;
                background: white !important;
            }
            
            /* Header optimization */
            .invoice-header {
                background: white !important;
                padding: 20px 15px 15px 15px !important;
                border-bottom: 2px solid #3b82f6 !important;
                page-break-inside: avoid;
            }
            
            .company-info {
                margin-bottom: 15px !important;
                text-align: center;
            }
            
            .company-name {
                font-size: 24px !important;
                font-weight: bold !important;
                color: #3b82f6 !important;
                margin-bottom: 5px !important;
            }
            
            .company-address {
                font-size: 9px !important;
                line-height: 1.2 !important;
                margin-bottom: 10px !important;
            }
            
            .invoice-title {
                font-size: 18px !important;
                font-weight: bold !important;
                color: #3b82f6 !important;
                text-align: center !important;
                margin: 10px 0 !important;
                text-transform: uppercase !important;
                letter-spacing: 1px !important;
            }
            
            /* Invoice info layout */
            .invoice-info {
                display: grid !important;
                grid-template-columns: 1fr 1fr !important;
                gap: 20px !important;
                padding: 15px !important;
                background: #f8f9fa !important;
                border: 1px solid #e9ecef !important;
                margin-bottom: 15px !important;
                page-break-inside: avoid;
            }
            
            .bill-to, .bill-details {
                font-size: 10px !important;
            }
            
            .section-title {
                font-weight: bold !important;
                color: #3b82f6 !important;
                font-size: 11px !important;
                margin-bottom: 8px !important;
                border-bottom: 1px solid #3b82f6 !important;
                padding-bottom: 2px !important;
            }
            
            /* Tables optimization */
            .items-table, .services-table {
                width: 100% !important;
                border-collapse: collapse !important;
                margin-bottom: 15px !important;
                font-size: 9px !important;
                page-break-inside: auto;
            }
            
            .items-table th, .services-table th,
            .items-table td, .services-table td {
                border: 1px solid #666 !important;
                padding: 4px 3px !important;
                text-align: left !important;
                vertical-align: top !important;
            }
            
            .items-table th, .services-table th {
                background: #3b82f6 !important;
                color: white !important;
                font-weight: bold !important;
                font-size: 9px !important;
            }
            
            .items-table .amount-cell, .services-table .amount-cell,
            .items-table .rate-cell, .services-table .rate-cell {
                text-align: right !important;
            }
            
            /* Section headers */
            .items-header, .services-header {
                background: linear-gradient(135deg, #3b82f6, #2563eb) !important;
                color: white !important;
                padding: 8px 15px !important;
                font-weight: bold !important;
                font-size: 11px !important;
                margin: 15px 0 5px 0 !important;
                border-radius: 0 !important;
            }
            
            /* Totals section */
            .invoice-content {
                padding: 0 15px !important;
            }
            
            .totals-wrapper {
                display: grid !important;
                grid-template-columns: 1fr 300px !important;
                gap: 20px !important;
                margin-top: 15px !important;
                page-break-inside: avoid;
            }
            
            .payment-card, .totals-card {
                border: 1px solid #ddd !important;
                background: white !important;
                padding: 10px !important;
                font-size: 10px !important;
            }
            
            .card-header {
                background: #3b82f6 !important;
                color: white !important;
                font-weight: bold !important;
                padding: 6px 10px !important;
                margin: -10px -10px 10px -10px !important;
                font-size: 10px !important;
            }
            
            .payment-row, .total-row {
                display: flex !important;
                justify-content: space-between !important;
                padding: 3px 0 !important;
                border-bottom: 1px dotted #ccc !important;
                font-size: 9px !important;
            }
            
            .total-row.final-total {
                border-top: 2px solid #3b82f6 !important;
                font-weight: bold !important;
                font-size: 11px !important;
                background: #f8f9fa !important;
                padding: 6px 0 !important;
                margin-top: 5px !important;
            }
            
            /* GST-specific styling */
            .gst-section {
                background: #e3f2fd !important;
                border: 1px solid #3b82f6 !important;
                padding: 8px !important;
                margin: 10px 0 !important;
                font-size: 9px !important;
            }
            
            .non-gst-notice {
                background: #fff3cd !important;
                border: 1px solid #ffc107 !important;
                color: #856404 !important;
                padding: 8px !important;
                margin: 10px 0 !important;
                font-size: 9px !important;
                text-align: center !important;
            }
            
            /* Terms and conditions */
            .terms-section {
                margin-top: 15px !important;
                padding: 10px !important;
                border: 1px solid #ddd !important;
                background: #f8f9fa !important;
                font-size: 8px !important;
                page-break-inside: avoid;
            }
            
            .terms-section h4 {
                color: #3b82f6 !important;
                font-size: 10px !important;
                margin: 0 0 8px 0 !important;
                border-bottom: 1px solid #3b82f6 !important;
                padding-bottom: 2px !important;
            }
            
            .terms-section ul {
                margin: 0 !important;
                padding-left: 15px !important;
            }
            
            .terms-section li {
                margin-bottom: 3px !important;
                line-height: 1.2 !important;
            }
            
            /* Footer */
            .footer-info {
                margin-top: 20px !important;
                padding: 10px !important;
                border-top: 2px solid #3b82f6 !important;
                text-align: center !important;
                font-size: 8px !important;
                background: #f8f9fa !important;
                page-break-inside: avoid;
                display: block !important;
            }
            
            .footer-info .footer-section {
                display: inline-block !important;
                margin: 0 15px !important;
                vertical-align: top !important;
            }
            
            /* Page breaks */
            .invoice-header {
                page-break-after: avoid;
            }
            
            .invoice-info {
                page-break-after: avoid;
            }
            
            .items-header {
                page-break-after: avoid;
            }
            
            .services-header {
                page-break-after: avoid;
            }
            
            .totals-wrapper {
                page-break-before: avoid;
                page-break-inside: avoid;
            }
            
            /* Utility classes for print */
            .no-print {
                display: none !important;
            }
            
            .print-only {
                display: block !important;
            }
            
            /* Compact spacing */
            .invoice-content > * {
                margin-bottom: 10px !important;
            }
            
            /* Ensure proper colors */
            .blue-text {
                color: #3b82f6 !important;
            }
            
            /* Print-specific adjustments */
            @page {
                margin: 0.75in 0.5in;
                size: A4;
            }
            
            /* Force page break before totals if needed */
            .force-page-break {
                page-break-before: always;
            }
            
            /* Bill-specific elements */
            .bill-number {
                font-weight: bold !important;
                color: #3b82f6 !important;
            }
            
            .bill-date {
                font-weight: normal !important;
                color: #666 !important;
            }
            
            /* Payment information */
            .payment-info {
                border: 2px solid #3b82f6 !important;
                background: #f0f9ff !important;
                padding: 10px !important;
                margin: 10px 0 !important;
                font-size: 9px !important;
            }
        }
        
        @media (max-width: 768px) {
            .invoice-container {
                margin: 10px;
                border-radius: 8px;
            }
            
            .invoice-header {
                padding: 20px;
            }
            
            .company-name {
                font-size: 28px;
            }
            
            .invoice-title {
                font-size: 24px;
            }
            
            .invoice-info {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .totals-wrapper {
                grid-template-columns: 1fr;
                gap: 20px;
            }
            
            .footer-info {
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 20px;
            }
            
            .items-table-wrapper,
            .services-table-wrapper {
                overflow-x: auto;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="logo-section">
                <a href="/dashboard" style="text-decoration: none; color: inherit;">
                    <h1>üè¢ <%= companyName %></h1>
                    <p>Bill Details</p>
                </a>
            </div>
            
            <div class="user-section">
                <div class="user-info">
                    <span class="user-name">Welcome, <%= user.name %></span>
                    <span class="user-role">(<%= user.role %>)</span>
                </div>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="breadcrumb">
        <div class="breadcrumb-content">
            <a href="/dashboard">üè† Dashboard</a>
            <span class="separator">></span>
            <a href="/bills">üìÑ Bills</a>
            <span class="separator">></span>
            <span class="current">üìÑ Bill #<%= bill.billNumber %></span>
        </div>
    </nav>

    <!-- Alert Messages -->
    <% if (typeof query !== 'undefined' && query.success) { %>
        <div class="alert alert-success" style="margin: 20px auto; max-width: 800px;">
            <%= query.success %>
        </div>
    <% } %>

    <!-- Invoice Container -->
    <div class="invoice-container">
        <!-- Invoice Header -->
        <div class="invoice-header">
            <div class="company-info">
                <div class="company-name"><%= company.name %></div>
                <div class="company-details">
                    <%= company.address.line1 %>, <%= company.address.line2 %><br>
                    <%= company.address.city %>, <%= company.address.state %> - <%= company.address.pincode %><br>
                    Cell: <%= company.contact.phone1 %>, <%= company.contact.phone2 %><br>
                    <% if (company.gst.gstin) { %>GSTIN: <%= company.gst.gstin %><% } %>
                </div>
            </div>
            
            <div class="invoice-title">
                <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst')) { %>
                    Tax Invoice
                <% } else { %>
                    Invoice
                <% } %>
            </div>
            
            <div class="bill-type-indicator">
                <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst')) { %>
                    <span class="bill-type-badge gst-badge">üè∑Ô∏è GST Bill</span>
                <% } else { %>
                    <span class="bill-type-badge non-gst-badge">üìÑ Non-GST Bill</span>
                <% } %>
            </div>
        </div>

        <!-- Invoice Info -->
        <div class="invoice-info">
            <div class="bill-to">
                <div class="section-title">Bill To:</div>
                <strong><%= bill.customerName %></strong><br>
                Phone: <%= bill.customerPhone %><br>
                <% if (bill.customerGstin) { %>
                    GSTIN: <%= bill.customerGstin %>
                <% } else { %>
                    <em>Unregistered Customer</em>
                <% } %>
            </div>
            
            <div class="bill-details">
                <div class="section-title">Bill Details:</div>
                <strong>Bill No:</strong> #<%= bill.billNumber %><br>
                <strong>Date:</strong> <%= new Date(bill.billDate).toLocaleDateString('en-IN') %><br>
                <strong>Due Date:</strong> <%= new Date(new Date(bill.billDate).getTime() + 30*24*60*60*1000).toLocaleDateString('en-IN') %><br>
                <strong>Payment:</strong> <%= bill.paymentMethod %><br>
                <strong>Created By:</strong> <%= user.name %>
            </div>
        </div>

        <!-- Items Section -->
        <div class="items-section">
            <div class="items-header">
                <h3>Items</h3>
                <div class="items-count"><%= bill.items.length %> item(s)</div>
            </div>
            
            <div class="items-table-wrapper">
                <table class="items-table">
                    <thead>
                        <tr>
                            <th style="width: 60px; text-align: center;">S.No</th>
                            <th style="width: auto; text-align: left; min-width: 200px;">Description</th>
                            <th style="width: 100px; text-align: center;">HSN</th>
                            <th style="width: 80px; text-align: center;">Qty</th>
                            <th style="width: 120px; text-align: right;">Rate</th>
                            <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst')) { %>
                            <th style="width: 120px; text-align: right;">Amount</th>
                            <th style="width: 80px; text-align: center;">GST</th>
                            <% } else { %>
                            <th style="width: 150px; text-align: right;">Amount</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% let itemCounter = 1; %>
                        <% bill.items.forEach(item => { %>
                            <tr class="item-row">
                                <td class="text-center"><%= itemCounter %></td>
                                <td class="item-name"><%= item.itemName %></td>
                                <td class="text-center"><%= item.hsnCode %></td>
                                <td class="text-center"><%= item.quantity %></td>
                                <td class="text-right">‚Çπ<%= item.rate.toFixed(2) %></td>
                                <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst')) { %>
                                <td class="text-right amount-cell">‚Çπ<%= item.amount.toFixed(2) %></td>
                                <td class="text-center"><%= item.gstRate %>%</td>
                                <% } else { %>
                                <td class="text-right amount-cell">‚Çπ<%= item.amount.toFixed(2) %></td>
                                <% } %>
                            </tr>
                            <% itemCounter++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Services Section -->
        <% if (bill.extraCharges && bill.extraCharges.length > 0) { %>
        <div class="services-section">
            <div class="services-header">
                <h3>Additional Services</h3>
                <div class="services-count"><%= bill.extraCharges.length %> service(s)</div>
            </div>
            
            <div class="services-table-wrapper">
                <table class="services-table">
                    <thead>
                        <tr>
                            <th style="width: 60px; text-align: center;">S.No</th>
                            <th style="width: auto; text-align: left; min-width: 250px;">Service Description</th>
                            <th style="width: 100px; text-align: center;">SAC Code</th>
                            <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst')) { %>
                            <th style="width: 120px; text-align: right;">Amount</th>
                            <th style="width: 100px; text-align: center;">GST Rate</th>
                            <% } else { %>
                            <th style="width: 150px; text-align: right;">Amount</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% let serviceCounter = 1; %>
                        <% bill.extraCharges.forEach(charge => { %>
                            <tr class="service-row">
                                <td class="text-center"><%= serviceCounter %></td>
                                <td class="service-name"><%= charge.description || charge.name || 'Service Charge' %></td>
                                <td class="text-center">9967</td>
                                <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst')) { %>
                                <td class="text-right amount-cell">‚Çπ<%= parseFloat(charge.amount || 0).toFixed(2) %></td>
                                <td class="text-center"><%= charge.gstRate || 0 %>%</td>
                                <% } else { %>
                                <td class="text-right amount-cell">‚Çπ<%= parseFloat(charge.amount || 0).toFixed(2) %></td>
                                <% } %>
                            </tr>
                            <% serviceCounter++; %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>

        <!-- Totals Section - Redesigned -->
        <div class="totals-section">
            <div class="totals-wrapper">
                <!-- Payment Information Card -->
                <div class="payment-card">
                    <div class="card-header">
                        üí≥ Payment Information
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Payment Method:</span>
                        <span class="row-value"><%= bill.paymentMethod %></span>
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Bill Status:</span>
                        <span class="row-value">
                            <span class="status-badge status-paid">PAID</span>
                        </span>
                    </div>
                    
                    <div class="payment-row">
                        <span class="row-label">Bill Date:</span>
                        <span class="row-value"><%= new Date(bill.billDate).toLocaleDateString('en-IN') %></span>
                    </div>
                    
                    <div class="thank-you-section">
                        <p>
                            <strong>Thank you for your business!</strong>
                            This is a computer generated invoice and does not require signature.
                        </p>
                    </div>
                </div>
                
                <!-- Totals Card -->
                <div class="totals-card">
                    <div class="card-header">
                        üí∞ Bill Summary
                    </div>
                    
                    <div class="total-row-new">
                        <span class="row-label">Subtotal:</span>
                        <span class="row-value">‚Çπ<%= bill.subtotal.toFixed(2) %></span>
                    </div>
                    
                    <% if (bill.discount && bill.discount > 0) { %>
                        <div class="total-row-new">
                            <span class="row-label">Discount:</span>
                            <span class="row-value">-‚Çπ<%= bill.discount.toFixed(2) %></span>
                        </div>
                    <% } %>
                    
                    <% if (bill.gstEnabled && (bill.documentType === 'GST' || bill.documentType === 'gst') && bill.cgstAmount > 0) { %>
                        <div class="total-row-new">
                            <span class="row-label">CGST:</span>
                            <span class="row-value">‚Çπ<%= bill.cgstAmount.toFixed(2) %></span>
                        </div>
                        <div class="total-row-new">
                            <span class="row-label">SGST:</span>
                            <span class="row-value">‚Çπ<%= bill.sgstAmount.toFixed(2) %></span>
                        </div>
                        <div class="total-row-new">
                            <span class="row-label">Total Tax:</span>
                            <span class="row-value">‚Çπ<%= (bill.cgstAmount + bill.sgstAmount).toFixed(2) %></span>
                        </div>
                    <% } %>
                    
                    <% if (bill.roundOffAmount && Math.abs(bill.roundOffAmount) > 0) { %>
                        <div class="total-row-new">
                            <span class="row-label">Round Off:</span>
                            <span class="row-value"><%= bill.roundOffAmount >= 0 ? '+' : '' %>‚Çπ<%= bill.roundOffAmount.toFixed(2) %></span>
                        </div>
                    <% } %>
                    
                    <div class="final-amount">
                        <div class="amount-label">Total Amount</div>
                        <div class="amount-value">‚Çπ<%= bill.finalTotal.toFixed(2) %></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Terms and Bank Details Section -->
        <div class="footer-info">
            <div class="terms-section">
                <h4>üìã Terms & Conditions</h4>
                <ul>
                    <li>Payment due within 30 days of invoice date</li>
                    <li>Goods once sold cannot be returned or exchanged</li>
                    <li>Any disputes should be resolved within 7 days</li>
                    <li>Subject to local jurisdiction only</li>
                </ul>
            </div>
            
            <% if (company.bankDetails) { %>
            <div class="bank-details">
                <h4>üè¶ Bank Details</h4>
                <p><strong>Account Name:</strong> <%= company.bankDetails.accountHolderName || company.name %></p>
                <p><strong>Bank Name:</strong> <%= company.bankDetails.bankName || 'Bank Details Available on Request' %></p>
                <p><strong>Account Number:</strong> <%= company.bankDetails.accountNumber || 'XXXX-XXXX-XXXX' %></p>
                <p><strong>Branch & IFSC Code:</strong> <%= company.bankDetails.branchDetails || 'XXXX0000XXX' %></p>
            </div>
            <% } %>
        </div>

        <!-- Footer -->
        <!-- Footer section removed as content moved to totals section -->
    </div>

    <!-- Actions -->
    <div class="actions">
        <div class="action-buttons">
            <a href="/bills" class="btn btn-secondary">
                <i class="icon">‚Üê</i>
                <span>Back to Bills</span>
            </a>
            
            <button onclick="printBill()" class="btn btn-primary">
                <i class="icon">üñ®Ô∏è</i>
                <span>Print Invoice</span>
            </button>
            
            <a href="/bills/<%= bill.id %>/print" target="_blank" class="btn" style="background: linear-gradient(135deg, #28a745, #20c997); color: white; margin-left: 10px;">
                <i class="icon">üìÑ</i>
                <span>Compact Print</span>
            </a>
            
            <a href="/bills/new" class="btn btn-success">
                <i class="icon">‚ûï</i>
                <span>New Bill</span>
            </a>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Enhanced Print Function for Bills
        function printBill() {
            // Add print-specific class to body
            document.body.classList.add('printing');
            
            // Optimize for print
            const originalTitle = document.title;
            document.title = 'Bill-<%= bill.billNumber %>-<%= new Date().toISOString().split("T")[0] %>';
            
            // Add print date for reference
            const printDate = new Date().toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            // Create print footer
            const printFooter = document.createElement('div');
            printFooter.className = 'print-only';
            printFooter.style.cssText = `
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                text-align: center;
                font-size: 8px;
                color: #666;
                background: white;
                padding: 5px;
                border-top: 1px solid #ddd;
                z-index: 1000;
            `;
            printFooter.innerHTML = `Printed on: ${printDate} | Bill: <%= bill.billNumber %> | GST: <%= bill.gstEnabled ? 'Enabled' : 'Not Applicable' %>`;
            
            document.body.appendChild(printFooter);
            
            // Trigger print
            window.print();
            
            // Cleanup after print
            setTimeout(() => {
                document.body.classList.remove('printing');
                document.title = originalTitle;
                if (printFooter.parentNode) {
                    printFooter.parentNode.removeChild(printFooter);
                }
            }, 1000);
        }
    </script>
</body>
</html>
