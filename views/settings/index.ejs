<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="logo-section">
                <h1><i class="fas fa-cogs"></i> Settings Dashboard</h1>
                <p>System Configuration & Management</p>
            </div>
            <div class="user-section">
                <div class="user-info">
                    <div class="user-name"><%= user.fullName %></div>
                    <div class="user-role"><%= user.role %></div>
                </div>
                <a href="/logout" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </header>

    <!-- Breadcrumb -->
    <nav class="breadcrumb">
        <div class="breadcrumb-content">
            <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
            <span class="separator">/</span>
            <span class="current">Settings</span>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="items-main">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-left">
                <h2><i class="fas fa-cogs"></i> Settings Dashboard</h2>
                <p>Configure and manage your billing system</p>
            </div>
            <div class="header-right">
                <a href="/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Alert Messages -->
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-<%= message.type %>">
                <i class="fas fa-<%= message.type === 'success' ? 'check-circle' : 'exclamation-triangle' %>"></i>
                <%= message.text %>
            </div>
        <% } %>

        <!-- System Overview -->
        <div class="info-card">
            <div class="info-header">
                <h3><i class="fas fa-chart-bar"></i> System Overview</h3>
            </div>
            <div class="info-content">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-users" style="color: #667eea;"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Total Users</h3>
                            <div class="stat-number"><%= systemStats.totalUsers %></div>
                            <small>Active system users</small>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-boxes" style="color: #28a745;"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Total Items</h3>
                            <div class="stat-number"><%= systemStats.totalItems %></div>
                            <small>Products & services</small>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-user-tie" style="color: #ffc107;"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Total Customers</h3>
                            <div class="stat-number"><%= systemStats.totalCustomers %></div>
                            <small>Registered customers</small>
                        </div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-tags" style="color: #dc3545;"></i>
                        </div>
                        <div class="stat-info">
                            <h3>Categories</h3>
                            <div class="stat-number"><%= systemStats.totalCategories %></div>
                            <small>Product categories</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Settings Categories -->
        <div class="settings-grid">
            <!-- Company Settings -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="setting-content">
                    <h3>Company Settings</h3>
                    <p>Manage company information, contact details, and branding</p>
                    <div class="setting-details">
                        <small><i class="fas fa-info-circle"></i> Company: <strong><%= company ? company.name : 'Not configured' %></strong></small>
                        <small><i class="fas fa-envelope"></i> Email: <strong><%= company ? company.email : 'Not set' %></strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/company" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>

            <!-- Tax & GST Settings -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-calculator"></i>
                </div>
                <div class="setting-content">
                    <h3>Tax & GST Settings</h3>
                    <p>Configure GST rates, tax calculations, and HSN codes</p>
                    <div class="setting-details">
                        <small><i class="fas fa-percentage"></i> Default GST: <strong>18%</strong></small>
                        <small><i class="fas fa-code"></i> HSN Codes: <strong>Configured</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/tax" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>

            <!-- Invoice & Billing -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-file-invoice"></i>
                </div>
                <div class="setting-content">
                    <h3>Invoice & Billing</h3>
                    <p>Customize invoice format, numbering, and billing preferences</p>
                    <div class="setting-details">
                        <small><i class="fas fa-hashtag"></i> Invoice Prefix: <strong>VS</strong></small>
                        <small><i class="fas fa-palette"></i> Template: <strong>Standard</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/invoice" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>

            <!-- User Management -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <div class="setting-content">
                    <h3>User Management</h3>
                    <p>Manage user accounts, roles, and permissions</p>
                    <div class="setting-details">
                        <small><i class="fas fa-users"></i> Total Users: <strong><%= systemStats.totalUsers %></strong></small>
                        <small><i class="fas fa-shield-alt"></i> Admin Access: <strong>Restricted</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/users" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Manage
                    </a>
                </div>
            </div>

            <!-- System Preferences -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-sliders-h"></i>
                </div>
                <div class="setting-content">
                    <h3>System Preferences</h3>
                    <p>Configure system-wide settings and preferences</p>
                    <div class="setting-details">
                        <small><i class="fas fa-money-bill"></i> Currency: <strong>INR (â‚¹)</strong></small>
                        <small><i class="fas fa-clock"></i> Timezone: <strong>Asia/Kolkata</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/system" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>

            <!-- Data Management -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-database"></i>
                </div>
                <div class="setting-content">
                    <h3>Data Management</h3>
                    <p>Backup, restore, and manage your business data</p>
                    <div class="setting-details">
                        <small><i class="fas fa-shield-alt"></i> Auto Backup: <strong>Enabled</strong></small>
                        <small><i class="fas fa-download"></i> Export: <strong>Available</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/backup" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Manage
                    </a>
                </div>
            </div>

            <!-- Business Rules -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-business-time"></i>
                </div>
                <div class="setting-content">
                    <h3>Business Rules</h3>
                    <p>Configure stock thresholds, pricing rules, and validations</p>
                    <div class="setting-details">
                        <small><i class="fas fa-exclamation-triangle"></i> Low Stock: <strong>10 units</strong></small>
                        <small><i class="fas fa-chart-line"></i> Pricing: <strong>Auto-calculate</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/business" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <div class="setting-content">
                    <h3>Security Settings</h3>
                    <p>Manage password policies, session timeouts, and security</p>
                    <div class="setting-details">
                        <small><i class="fas fa-clock"></i> Session Timeout: <strong>30 minutes</strong></small>
                        <small><i class="fas fa-key"></i> Password Policy: <strong>Standard</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/security" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>

            <!-- Integration Settings -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-plug"></i>
                </div>
                <div class="setting-content">
                    <h3>Integration Settings</h3>
                    <p>Configure third-party integrations and API settings</p>
                    <div class="setting-details">
                        <small><i class="fas fa-cloud"></i> Cloud Sync: <strong>Disabled</strong></small>
                        <small><i class="fas fa-cogs"></i> API Access: <strong>Local only</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/integration" class="btn btn-secondary">
                        <i class="fas fa-wrench"></i> Configure
                    </a>
                </div>
            </div>

            <!-- Application Settings -->
            <div class="setting-card">
                <div class="setting-icon">
                    <i class="fas fa-desktop"></i>
                </div>
                <div class="setting-content">
                    <h3>Application Settings</h3>
                    <p>Configure UI preferences, themes, and application behavior</p>
                    <div class="setting-details">
                        <small><i class="fas fa-palette"></i> Theme: <strong>Default</strong></small>
                        <small><i class="fas fa-language"></i> Language: <strong>English</strong></small>
                    </div>
                </div>
                <div class="setting-actions">
                    <a href="/settings/application" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Configure
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="dev-info">
            <h4><i class="fas fa-bolt"></i> Quick Actions</h4>
            <div class="settings-actions">
                <a href="/settings/backup/create" class="btn btn-warning" onclick="return confirm('Create a backup now?')">
                    <i class="fas fa-save"></i> Create Backup
                </a>
                <a href="/settings/export/all" class="btn btn-info">
                    <i class="fas fa-download"></i> Export All Data
                </a>
                <a href="/settings/system/reset" class="btn btn-danger" onclick="return confirm('Are you sure? This will reset system preferences to defaults.')">
                    <i class="fas fa-undo"></i> Reset System
                </a>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <p>&copy; 2024 Vikram Steels. Settings Dashboard - System Configuration & Management</p>
    </footer>

    <script>
        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 300);
                }, 5000);
            });
        });
    </script>
</body>
</html>
