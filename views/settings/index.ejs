    <!-- Header -->
    <header class="main-he    <script>
        // Load license status for settings page
        document.addEventListener('DOMContentLoaded', function() {
            loadSettingsLicenseInfo();
        });

        async function loadSettingsLicenseInfo() {
            const statusElement = document.getElementById('settingsLicenseStatus');
            const expiryElement = document.getElementById('settingsLicenseExpiry');
            
            if (!statusElement || !expiryElement) return;
            
            try {
                const response = await fetch('/license/info');
                const licenseInfo = await response.json();
                
                if (response.ok && licenseInfo.status === 'valid') {
                    let statusText = 'Active';
                    let statusColor = '#28a745';
                    
                    if (licenseInfo.isExpiringSoon) {
                        statusText = 'Expiring Soon';
                        statusColor = '#ffc107';
                    }
                    
                    statusElement.innerHTML = `<strong style="color: ${statusColor};">${statusText}</strong>`;
                    expiryElement.innerHTML = `<strong>${licenseInfo.expiryDate}</strong>`;
                } else {
                    statusElement.innerHTML = '<strong style="color: #dc3545;">Invalid</strong>';
                    expiryElement.innerHTML = '<strong style="color: #dc3545;">N/A</strong>';
                }
            } catch (error) {
                console.error('Error loading license info:', error);
                statusElement.innerHTML = '<strong style="color: #6c757d;">Unknown</strong>';
                expiryElement.innerHTML = '<strong style="color: #6c757d;">Unknown</strong>';
            }
        }

        // Auto-hide alerts
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 300);
                }, 5000);
            });
        });
    </script>    <div class="header-content">
