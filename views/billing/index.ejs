<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="logo-section">
                <h1>üè¢ <%= companyName %></h1>
                <p>Billing & Invoices</p>
            </div>
            
            <div class="user-section">
                <div class="user-info">
                    <span class="user-name">Welcome, <%= user.name %></span>
                    <span class="user-role">(<%= user.role %>)</span>
                </div>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="breadcrumb">
        <div class="breadcrumb-content">
            <a href="/dashboard">üè† Dashboard</a>
            <span class="separator">></span>
            <span class="current">üí≥ Billing & Invoices</span>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="items-main">
        <div class="items-container">
            <!-- Page Header -->
            <div class="page-header">
                <div class="header-left">
                    <h2>üí≥ Billing & Invoices</h2>
                    <p>Create invoices and manage billing</p>
                </div>
                <div class="header-right">
                    <a href="/billing/new" class="btn btn-primary">
                        <span class="btn-icon">üìù</span>
                        Create New Bill
                    </a>
                </div>
            </div>

            <!-- Alert Messages -->
            <% if (typeof query !== 'undefined' && query.success) { %>
                <div class="alert alert-success">
                    <%= query.success %>
                </div>
            <% } %>
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="alert alert-error">
                    <%= query.error %>
                </div>
            <% } %>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üìÑ</div>
                    <div class="stat-info">
                        <h3>Total Bills</h3>
                        <p class="stat-number"><%= totalBills %></p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üí∞</div>
                    <div class="stat-info">
                        <h3>Today's Revenue</h3>
                        <p class="stat-number">‚Çπ<%= todaysRevenue.toLocaleString() %></p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">‚è≥</div>
                    <div class="stat-info">
                        <h3>Pending Bills</h3>
                        <p class="stat-number <% if (pendingBills > 0) { %>text-warning<% } %>"><%= pendingBills %></p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">üìà</div>
                    <div class="stat-info">
                        <h3>This Month</h3>
                        <p class="stat-number">‚Çπ<%= bills.filter(b => new Date(b.createdAt).getMonth() === new Date().getMonth()).reduce((sum, b) => sum + b.grandTotal, 0).toLocaleString() %></p>
                    </div>
                </div>
            </div>

            <!-- Search and Filter -->
            <div class="search-section">
                <div class="search-controls">
                    <div class="search-box">
                        <input type="text" id="searchInput" placeholder="üîç Search bills..." class="search-input">
                    </div>
                    <div class="filter-controls">
                        <select id="statusFilter" class="filter-select">
                            <option value="">All Status</option>
                            <option value="paid">Paid</option>
                            <option value="pending">Pending</option>
                        </select>
                        <input type="date" id="dateFilter" class="filter-select">
                    </div>
                </div>
            </div>

            <!-- Bills Table -->
            <div class="items-table-container">
                <% if (bills.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-icon">üìÑ</div>
                        <h3>No Bills Found</h3>
                        <p>Start by creating your first invoice.</p>
                        <a href="/billing/new" class="btn btn-primary">Create First Bill</a>
                    </div>
                <% } else { %>
                    <table class="items-table" id="billsTable">
                        <thead>
                            <tr>
                                <th>Bill Number</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Due Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bills.forEach(bill => { %>
                                <tr class="item-row" 
                                    data-status="<%= bill.status %>" 
                                    data-date="<%= bill.billDate %>">
                                    <td>
                                        <div class="bill-info">
                                            <strong><%= bill.billNumber %></strong>
                                            <small class="bill-id">ID: <%= bill.id %></small>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="customer-info">
                                            <strong><%= bill.customerName %></strong>
                                            <small><%= bill.paymentTerms %></small>
                                        </div>
                                    </td>
                                    <td>
                                        <%= new Date(bill.billDate).toLocaleDateString('en-IN') %>
                                    </td>
                                    <td>
                                        <div class="amount-info">
                                            <strong>‚Çπ<%= bill.grandTotal.toLocaleString() %></strong>
                                            <% if (bill.totalGst > 0) { %>
                                                <small>Inc. GST: ‚Çπ<%= bill.totalGst.toLocaleString() %></small>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (bill.status === 'paid') { %>
                                            <span class="status-badge status-paid">‚úÖ Paid</span>
                                        <% } else if (bill.status === 'pending') { %>
                                            <% if (bill.dueDate && new Date(bill.dueDate) < new Date()) { %>
                                                <span class="status-badge status-overdue">üî¥ Overdue</span>
                                            <% } else { %>
                                                <span class="status-badge status-pending">‚è≥ Pending</span>
                                            <% } %>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (bill.dueDate) { %>
                                            <%= new Date(bill.dueDate).toLocaleDateString('en-IN') %>
                                        <% } else { %>
                                            <span class="no-due">Cash Sale</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/billing/<%= bill.id %>" class="btn btn-sm btn-primary" title="View Bill">
                                                üëÅÔ∏è
                                            </a>
                                            <% if (bill.status === 'pending') { %>
                                                <button onclick="recordPayment('<%= bill.id %>', '<%= bill.billNumber %>', '<%= bill.grandTotal %>')" 
                                                        class="btn btn-sm btn-success" title="Record Payment">
                                                    üí∞
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Payment Modal -->
    <div id="paymentModal" class="modal">
        <div class="modal-content">
            <h3>üí∞ Record Payment</h3>
            <p>Recording payment for bill: <strong id="paymentBillNumber"></strong></p>
            <p>Total Amount: <strong id="paymentAmount"></strong></p>
            <form id="paymentForm" method="POST" style="margin-top: 20px;">
                <div class="form-group">
                    <label for="paymentAmountInput">Payment Amount (‚Çπ)</label>
                    <input type="number" id="paymentAmountInput" name="paymentAmount" 
                           step="0.01" min="0" required class="form-control">
                </div>
                <div class="modal-actions">
                    <button type="button" onclick="closePaymentModal()" class="btn btn-secondary">Cancel</button>
                    <button type="submit" class="btn btn-success">Record Payment</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            filterBills();
        });

        // Filter functionality
        document.getElementById('statusFilter').addEventListener('change', function() {
            filterBills();
        });

        document.getElementById('dateFilter').addEventListener('change', function() {
            filterBills();
        });

        function filterBills() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const rows = document.querySelectorAll('.item-row');

            rows.forEach(row => {
                const billNumber = row.querySelector('.bill-info strong').textContent.toLowerCase();
                const customerName = row.querySelector('.customer-info strong').textContent.toLowerCase();
                const status = row.dataset.status;
                const billDate = row.dataset.date;

                const matchesSearch = billNumber.includes(searchTerm) || customerName.includes(searchTerm);
                const matchesStatus = !statusFilter || status === statusFilter;
                const matchesDate = !dateFilter || billDate === dateFilter;

                if (matchesSearch && matchesStatus && matchesDate) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Payment recording
        function recordPayment(billId, billNumber, amount) {
            const amountNum = parseFloat(amount);
            document.getElementById('paymentBillNumber').textContent = billNumber;
            document.getElementById('paymentAmount').textContent = '‚Çπ' + amountNum.toLocaleString();
            document.getElementById('paymentAmountInput').value = amountNum;
            document.getElementById('paymentForm').action = `/billing/${billId}/payment`;
            document.getElementById('paymentModal').style.display = 'flex';
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.addEventListener('click', function(e) {
            if (e.target === document.getElementById('paymentModal')) {
                closePaymentModal();
            }
        });

        // Auto-hide alerts
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 300);
            });
        }, 5000);

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'F1') {
                e.preventDefault();
                window.location.href = '/billing/new';
            }
        });
    </script>
</body>
</html>
