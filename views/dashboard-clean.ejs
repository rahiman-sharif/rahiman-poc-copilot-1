<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <%- include('partials/styles') %>
    
    <!-- Dashboard Specific Styles -->
    <style>
        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 30px;
        }

        /* Welcome Section */
        .welcome-section {
            margin-bottom: 40px;
        }

        .welcome-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .welcome-header h1 {
            font-size: 2.5rem;
            color: #2d3748;
            margin-bottom: 10px;
        }

        .welcome-subtitle {
            font-size: 1.1rem;
            color: #718096;
            margin: 0;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            transition: var(--transition);
            border-left: 4px solid #667eea;
        }

        .stat-card:hover {
            box-shadow: var(--card-hover-shadow);
            transform: translateY(-2px);
        }

        .stat-icon {
            font-size: 2rem;
            margin-bottom: 15px;
            display: block;
        }

        .stat-info h3 {
            font-size: 2rem;
            color: #2d3748;
            margin: 0 0 5px 0;
        }

        .stat-info p {
            color: #718096;
            margin: 0;
            font-weight: 500;
        }

        /* Quick Actions */
        .quick-actions-section {
            margin-bottom: 40px;
        }

        .quick-actions-section h2 {
            font-size: 1.8rem;
            color: #2d3748;
            margin-bottom: 20px;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .action-card {
            background: white;
            padding: 30px;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            text-decoration: none;
            transition: var(--transition);
            border-top: 4px solid transparent;
        }

        .action-card.primary {
            border-top-color: #667eea;
        }

        .action-card.secondary {
            border-top-color: #764ba2;
        }

        .action-card.success {
            border-top-color: #4facfe;
        }

        .action-card.warning {
            border-top-color: #fa709a;
        }

        .action-card:hover {
            box-shadow: var(--card-hover-shadow);
            transform: translateY(-3px);
            text-decoration: none;
        }

        .action-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            display: block;
        }

        .action-card h3 {
            font-size: 1.3rem;
            color: #2d3748;
            margin: 0 0 10px 0;
        }

        .action-card p {
            color: #718096;
            margin: 0;
        }

        /* Dashboard Row */
        .dashboard-row {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
            margin-bottom: 40px;
        }

        /* Recent Activity */
        .recent-activity,
        .alerts-section {
            background: white;
            padding: 25px;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
        }

        .recent-activity h2,
        .alerts-section h2 {
            font-size: 1.4rem;
            color: #2d3748;
            margin: 0 0 20px 0;
            padding-bottom: 10px;
            border-bottom: 2px solid #f7fafc;
        }

        .activity-item,
        .alert-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px 0;
            border-bottom: 1px solid #f7fafc;
        }

        .activity-item:last-child,
        .alert-item:last-child {
            border-bottom: none;
        }

        .activity-icon,
        .alert-icon {
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .activity-info,
        .alert-info {
            flex: 1;
        }

        .activity-info h4,
        .alert-info h4 {
            font-size: 1rem;
            color: #2d3748;
            margin: 0 0 5px 0;
        }

        .activity-info p,
        .alert-info p {
            color: #718096;
            margin: 0;
            font-size: 0.9rem;
        }

        .activity-time {
            font-size: 0.8rem;
            color: #a0aec0;
        }

        .activity-action,
        .alert-action {
            background: #667eea;
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.8rem;
            transition: var(--transition);
        }

        .activity-action:hover,
        .alert-action:hover {
            background: #5a67d8;
            text-decoration: none;
            color: white;
        }

        .alert-item.warning {
            background: #fffbf0;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
        }

        .alert-item.info {
            background: #f0f8ff;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #718096;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5a67d8;
            text-decoration: none;
            color: white;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 0 20px;
            }

            .dashboard-row {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .stats-grid,
            .actions-grid {
                grid-template-columns: 1fr;
            }

            .welcome-header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <main class="main-content">
        <div class="container">
            <!-- Dashboard Welcome Section -->
            <section class="welcome-section">
                <div class="welcome-header">
                    <h1>Welcome back, <%= user.name %>! üëã</h1>
                    <p class="welcome-subtitle">Here's what's happening with your business today</p>
                </div>

                <!-- Quick Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">üìã</div>
                        <div class="stat-info">
                            <h3><%= stats.totalBills || 0 %></h3>
                            <p>Total Bills</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">üí∞</div>
                        <div class="stat-info">
                            <h3>‚Çπ<%= stats.totalRevenue ? (stats.totalRevenue / 1000).toFixed(1) + 'K' : '0' %></h3>
                            <p>Revenue</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">üë•</div>
                        <div class="stat-info">
                            <h3><%= stats.totalCustomers || 0 %></h3>
                            <p>Customers</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">üì¶</div>
                        <div class="stat-info">
                            <h3><%= stats.totalItems || 0 %></h3>
                            <p>Products</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Quick Actions Section -->
            <section class="quick-actions-section">
                <h2>‚ö° Quick Actions</h2>
                <div class="actions-grid">
                    <a href="/bills/new" class="action-card primary">
                        <div class="action-icon">üìù</div>
                        <h3>New Bill</h3>
                        <p>Create a new bill for customer</p>
                    </a>
                    
                    <a href="/quotations/new" class="action-card secondary">
                        <div class="action-icon">üíú</div>
                        <h3>New Quotation</h3>
                        <p>Generate customer quotation</p>
                    </a>
                    
                    <a href="/customers" class="action-card success">
                        <div class="action-icon">üë•</div>
                        <h3>Customers</h3>
                        <p>Manage customer database</p>
                    </a>
                    
                    <a href="/items" class="action-card warning">
                        <div class="action-icon">üì¶</div>
                        <h3>Inventory</h3>
                        <p>Manage products & stock</p>
                    </a>
                </div>
            </section>

            <!-- Recent Activity & Alerts -->
            <div class="dashboard-row">
                <!-- Recent Bills -->
                <section class="recent-activity">
                    <h2>üìã Recent Bills</h2>
                    <div class="activity-list">
                        <% if (stats.recentBills && stats.recentBills.length > 0) { %>
                            <% stats.recentBills.slice(0, 5).forEach(bill => { %>
                            <div class="activity-item">
                                <div class="activity-icon">üìã</div>
                                <div class="activity-info">
                                    <h4>Bill #<%= bill.billNumber %></h4>
                                    <p><%= bill.customerName %> - ‚Çπ<%= bill.totalAmount %></p>
                                    <span class="activity-time"><%= bill.date %></span>
                                </div>
                                <a href="/bills/<%= bill._id %>" class="activity-action">View</a>
                            </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state">
                                <p>No recent bills found</p>
                                <a href="/bills/new" class="btn btn-primary">Create Your First Bill</a>
                            </div>
                        <% } %>
                    </div>
                </section>

                <!-- Alerts & Notifications -->
                <section class="alerts-section">
                    <h2>üîî Alerts & Notifications</h2>
                    <div class="alerts-list">
                        <!-- Low Stock Alert -->
                        <% if (stats.lowStockCount > 0) { %>
                        <div class="alert-item warning">
                            <div class="alert-icon">‚ö†Ô∏è</div>
                            <div class="alert-info">
                                <h4>Low Stock Alert</h4>
                                <p><%= stats.lowStockCount %> items running low</p>
                            </div>
                            <a href="/stock" class="alert-action">Check Stock</a>
                        </div>
                        <% } %>

                        <!-- License Status -->
                        <div class="alert-item info">
                            <div class="alert-icon">üìã</div>
                            <div class="alert-info">
                                <h4>License Status</h4>
                                <p id="licenseStatusText">Checking license...</p>
                            </div>
                        </div>

                        <!-- Backup Reminder -->
                        <% if (user.role === 'admin' || user.role === 'super') { %>
                        <div class="alert-item info">
                            <div class="alert-icon">üíæ</div>
                            <div class="alert-info">
                                <h4>Data Backup</h4>
                                <p>Keep your data safe with regular backups</p>
                            </div>
                            <a href="/data" class="alert-action">Backup Now</a>
                        </div>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>

    <!-- Dashboard Specific Scripts -->
    <script>
        // Update license status
        async function updateLicenseStatus() {
            try {
                const response = await fetch('/license/info');
                const data = await response.json();
                const statusElement = document.getElementById('licenseStatusText');
                
                if (data.isValid && !data.isExpired) {
                    statusElement.textContent = `Valid (${data.daysRemaining || 'Active'} ${data.daysRemaining ? 'days remaining' : ''})`;
                } else if (data.isExpired) {
                    statusElement.textContent = 'Expired - Please renew';
                } else {
                    statusElement.textContent = 'Invalid - Please check';
                }
            } catch (error) {
                console.log('License check failed:', error);
                document.getElementById('licenseStatusText').textContent = 'Valid for offline use';
            }
        }

        // Load license status on page load
        document.addEventListener('DOMContentLoaded', updateLicenseStatus);
    </script>
</body>
</html>
