<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="logo-section">
                <h1>üè¢ <%= companyName %></h1>
                <p>Billing Management System</p>
            </div>
            
            <div class="user-section">
                <div class="user-info">
                    <span class="user-name">Welcome, <%= user.name %></span>
                    <span class="user-role">(<%= user.role %>)</span>
                </div>
                <form action="/logout" method="POST" style="display: inline;">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>
    </header>

    <!-- Main Dashboard -->
    <main class="dashboard-main">
        <div class="dashboard-container">
            <!-- Welcome Banner -->
            <div class="welcome-banner">
                <h2>Welcome back, <%= user.name %>!</h2>
                <p>Your business overview and quick actions</p>
            </div>

            <!-- Business Overview -->
            <section class="overview-section">
                <h3 class="section-title">üìä Business Overview</h3>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-icon">üìã</span>
                            <h4>Today's Bills</h4>
                        </div>
                        <div class="stat-value"><%= stats.billsToday %></div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-icon">üí∞</span>
                            <h4>Today's Revenue</h4>
                        </div>
                        <div class="stat-value">‚Çπ<%= stats.revenueToday.toLocaleString() %></div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-icon">üë•</span>
                            <h4>Total Customers</h4>
                        </div>
                        <div class="stat-value"><%= stats.customersCount %></div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <span class="stat-icon">üì¶</span>
                            <h4>Inventory Items</h4>
                        </div>
                        <div class="stat-value"><%= stats.itemsCount %></div>
                        <% if (stats.lowStockCount > 0) { %>
                            <div class="stat-alert">‚ö†Ô∏è <%= stats.lowStockCount %> low stock</div>
                        <% } %>
                    </div>
                </div>
            </section>

            <!-- Primary Actions -->
            <section class="actions-section">
                <h3 class="section-title">‚ö° Primary Actions</h3>
                <div class="primary-actions">
                    <a href="/bills/new" class="primary-btn create-bill">
                        <span class="btn-icon">üìù</span>
                        <span class="btn-text">Create New Bill</span>
                    </a>
                    
                    <a href="/quotations/new" class="primary-btn create-quote">
                        <span class="btn-icon">üíú</span>
                        <span class="btn-text">Create Quotation</span>
                    </a>
                </div>
            </section>

            <!-- Management Grid -->
            <section class="management-section">
                <h3 class="section-title">üè¢ Business Management</h3>
                <div class="management-grid">
                    <!-- Sales & Orders -->
                    <div class="management-group">
                        <h4 class="group-title">Sales & Orders</h4>
                        <div class="management-cards">
                            <a href="/bills" class="mgmt-card">
                                <span class="mgmt-icon">üìã</span>
                                <div class="mgmt-info">
                                    <h5>Bills</h5>
                                    <p>View & manage invoices</p>
                                </div>
                            </a>
                            
                            <a href="/quotations" class="mgmt-card">
                                <span class="mgmt-icon">üíú</span>
                                <div class="mgmt-info">
                                    <h5>Quotations</h5>
                                    <p>Manage price quotes</p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Inventory -->
                    <div class="management-group">
                        <h4 class="group-title">Inventory</h4>
                        <div class="management-cards">
                            <a href="/items" class="mgmt-card">
                                <span class="mgmt-icon">üì¶</span>
                                <div class="mgmt-info">
                                    <h5>Items</h5>
                                    <p>Product catalog</p>
                                </div>
                            </a>
                            
                            <a href="/stock" class="mgmt-card">
                                <span class="mgmt-icon">üìä</span>
                                <div class="mgmt-info">
                                    <h5>Stock</h5>
                                    <p>Inventory tracking</p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Customer Relations -->
                    <div class="management-group">
                        <h4 class="group-title">Customer Relations</h4>
                        <div class="management-cards">
                            <a href="/customers" class="mgmt-card">
                                <span class="mgmt-icon">üë•</span>
                                <div class="mgmt-info">
                                    <h5>Customers</h5>
                                    <p>Customer directory</p>
                                </div>
                            </a>
                            
                            <a href="/reports" class="mgmt-card">
                                <span class="mgmt-icon">üìà</span>
                                <div class="mgmt-info">
                                    <h5>Reports</h5>
                                    <p>Sales analytics</p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <% if (user.role === 'admin' || user.role === 'super') { %>
                    <!-- System Administration -->
                    <div class="management-group admin-only">
                        <h4 class="group-title">System Administration</h4>
                        <div class="management-cards">
                            <a href="/users" class="mgmt-card">
                                <span class="mgmt-icon">üë§</span>
                                <div class="mgmt-info">
                                    <h5>Users</h5>
                                    <p>Manage system users</p>
                                </div>
                            </a>                            
                           
                            <% if (user && user.role === 'super') { %>
                            <a href="/settings/company" class="mgmt-card">
                                <span class="mgmt-icon">üè¢</span>
                                <div class="mgmt-info">
                                    <h5>Company Setup</h5>
                                    <p>Configure company details</p>
                                </div>
                            </a>
                            
                            <a href="/settings/route-control" class="mgmt-card route-control-card">
                                <span class="mgmt-icon">üõ£Ô∏è</span>
                                <div class="mgmt-info">
                                    <h5>Route Control Center</h5>
                                    <p>Manage client demo features</p>
                                </div>
                            </a>
                            <% } %>
                            
                            <a href="/data" class="mgmt-card">
                                <span class="mgmt-icon">üíæ</span>
                                <div class="mgmt-info">
                                    <h5>Data</h5>
                                    <p>Backup & restore</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </section>
        </div>
    </main>

    <footer class="main-footer">
        <p>&copy; 2025 <%= companyName %> Billing System. Built for offline use.</p>
    </footer>
</body>
</html>
