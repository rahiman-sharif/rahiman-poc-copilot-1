                        <span class="btn-icon">üìù</span>
                        <span class="btn-text">Create New Bill</span>
                    </a>
                    
                    <a href="/quotations/new" class="primary-btn create-quote">
                        <span class="btn-icon">üíú</span>
                        <span class="btn-text">Create Quotation</span>
                    </a>
                </div>
            </section>

            <!-- Management Grid -->
