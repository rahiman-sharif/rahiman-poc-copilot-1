                        </div>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </main>

    

    <!-- Dashboard Specific Scripts -->
    <script>
        // Comprehensive license status update function
        async function updateLicenseStatus() {
            try {
                const response = await fetch('/license/info');
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }
                
                const licenseInfo = await response.json();
                
                // Update stat card
                updateLicenseStatCard(licenseInfo);
                
                // Update alert notification (for backward compatibility)
                updateLicenseAlert(licenseInfo);
                
            } catch (error) {
                console.log('License check failed:', error);
                
                // Show offline fallback
                const statCard = document.getElementById('licenseStatCard');
                const statusElement = document.getElementById('licenseStatus');
                const detailsElement = document.getElementById('licenseDetails');
                const actionsElement = document.getElementById('licenseActions');
                
                if (statCard && statusElement && detailsElement) {
                    statCard.className = 'stat-card license-stat-card';
                    statusElement.className = 'license-status valid';
                    statusElement.textContent = 'Valid';
                    detailsElement.textContent = 'Running in offline mode';
                    actionsElement.style.display = 'none';
                }
                
                // Update alert text
                const alertStatusElement = document.getElementById('licenseStatusText');
                if (alertStatusElement) {
                    alertStatusElement.textContent = 'Valid for offline use';
                }
            }
        }

        // Update the license stat card with detailed information
        function updateLicenseStatCard(licenseInfo) {
            const statCard = document.getElementById('licenseStatCard');
            const statusElement = document.getElementById('licenseStatus');
            const detailsElement = document.getElementById('licenseDetails');
            const actionsElement = document.getElementById('licenseActions');
            
            if (!statCard || !statusElement || !detailsElement || !actionsElement) return;
            
            if (licenseInfo.status === 'valid') {
                // Determine status level based on days remaining
                let statusClass = 'valid';
                let cardClass = 'stat-card license-stat-card';
                let statusText = 'Active';
                
                if (licenseInfo.warningLevel === 'critical') {
                    statusClass = 'critical';
                    cardClass += ' critical';
                    statusText = 'Expires Soon';
                } else if (licenseInfo.warningLevel === 'warning') {
                    statusClass = 'warning';
                    cardClass += ' warning';
                    statusText = 'Expiring Soon';
                }
                
                // Update elements
                statCard.className = cardClass;
                statusElement.className = `license-status ${statusClass}`;
                statusElement.textContent = statusText;
                
                // Create detailed information
                let detailsText = `Expires: ${licenseInfo.expiryDate}`;
                if (licenseInfo.daysRemaining !== undefined) {
                    detailsText += `\n${licenseInfo.daysRemaining} days remaining`;
                }
                if (licenseInfo.companyName) {
                    detailsText += `\nLicensed to: ${licenseInfo.companyName}`;
                }
                
                detailsElement.innerHTML = detailsText.replace(/\n/g, '<br>');
                actionsElement.style.display = licenseInfo.isExpiringSoon ? 'block' : 'none';
                
            } else {
                // Invalid license
                statCard.className = 'stat-card license-stat-card invalid';
                statusElement.className = 'license-status invalid';
                statusElement.textContent = 'Invalid';
                detailsElement.textContent = licenseInfo.message || 'License verification failed';
                actionsElement.style.display = 'block';
            }
        }

        // Update the license alert notification
        function updateLicenseAlert(licenseInfo) {
            const alertStatusElement = document.getElementById('licenseStatusText');
            if (!alertStatusElement) return;
            
            if (licenseInfo.status === 'valid') {
                if (licenseInfo.daysRemaining !== undefined) {
                    alertStatusElement.textContent = `Valid (${licenseInfo.daysRemaining} days remaining)`;
                } else {
                    alertStatusElement.textContent = 'Valid';
                }
            } else {
                alertStatusElement.textContent = 'Invalid - Please check';
            }
        }

        // Load license status on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateLicenseStatus();
            
            // Refresh license info every 5 minutes
            setInterval(updateLicenseStatus, 5 * 60 * 1000);
        });
    </script>
</body>
