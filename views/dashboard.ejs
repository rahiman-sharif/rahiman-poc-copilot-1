    <!-- License Widget Styles -->
    <style>
        .license-card {
            position: relative;
        }
        .license-info {
            min-height: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .license-status {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .license-status.valid {
            color: #28a745;
        }
        .license-status.warning {
            color: #ffc107;
        }
        .license-status.expired {
            color: #dc3545;
        }
        .license-details {
            font-size: 0.9em;
            color: #666;
        }
        .license-warning {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            padding: 8px;
            border-radius: 4px;
            margin-top: 5px;
            font-size: 0.8em;
            color: #856404;
        }
        .license-expired {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            padding: 8px;
            border-radius: 4px;
            margin-top: 5px;
            font-size: 0.8em;
            color: #721c24;
        }
        .loading-spinner {
            text-align: center;
            color: #666;
            font-size: 0.9em;
        }
        .license-actions {
            margin-top: 8px;
        }
        .license-btn {
            background: #007bff;
            color: white;
            padding: 4px 8px;
            border: none;
            border-radius: 3px;
            font-size: 0.8em;
            text-decoration: none;
            display: inline-block;
        }
        .license-btn:hover {
            background: #0056b3;
            color: white;
            text-decoration: none;
        }
        .license-btn.upload {
            background: #28a745;
        }
        .license-btn.upload:hover {
            background: #1e7e34;
        }
    </style>

    <!-- License Widget Script -->
    <script>
        // Load license info on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadLicenseInfo();
        });

        async function loadLicenseInfo() {
            const widget = document.getElementById('licenseWidget');
            const infoContainer = widget.querySelector('.license-info');
            
            try {
                const response = await fetch('/license/info');
                const licenseInfo = await response.json();
                
                if (response.ok) {
                    displayLicenseInfo(licenseInfo, infoContainer);
                } else {
                    infoContainer.innerHTML = `
                        <div class="license-status expired">License Error</div>
                        <div class="license-details">Failed to load license information</div>
                    `;
                }
            } catch (error) {
                console.error('Error loading license info:', error);
                infoContainer.innerHTML = `
                    <div class="license-status expired">Connection Error</div>
                    <div class="license-details">Unable to check license status</div>
                `;
            }
        }

        function displayLicenseInfo(info, container) {
            if (info.status === 'valid') {
                let statusClass = 'valid';
                let statusText = 'Active';
                let warningHtml = '';
                
                if (info.isExpiringSoon) {
                    statusClass = 'warning';
                    statusText = 'Expiring Soon';
                    warningHtml = `
                        <div class="license-warning">
                            ‚ö†Ô∏è Expires in ${info.daysRemaining} days
                        </div>
                    `;
                }
                
                container.innerHTML = `
                    <div class="license-status ${statusClass}">${statusText}</div>
                    <div class="license-details">
                        Expires: ${info.expiryDate}<br>
                        ${info.daysRemaining} days remaining
                    </div>
                    ${warningHtml}
                    <div class="license-actions">
                        <a href="/license/upload" class="license-btn upload">Update License</a>
                    </div>
                `;
            } else {
                container.innerHTML = `
                    <div class="license-status expired">Invalid</div>
                    <div class="license-details">${info.message || 'License issue detected'}</div>
                    <div class="license-expired">
                        üö® Please upload a valid license
                    </div>
                    <div class="license-actions">
                        <a href="/license/upload" class="license-btn upload">Upload License</a>
                    </div>
                `;
            }
        }

        // Refresh license info every 5 minutes
        setInterval(loadLicenseInfo, 5 * 60 * 1000);
    </script>
</body>
</html>
