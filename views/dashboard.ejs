                <h3 class="section-title">üè¢ Business Management</h3>
                <div class="management-grid">
                    <!-- Sales & Orders -->
                    <div class="management-group">
                        <h4 class="group-title">Sales & Orders</h4>
                        <div class="management-cards">
                            <a href="/bills" class="mgmt-card">
